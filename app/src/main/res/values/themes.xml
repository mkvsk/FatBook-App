<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FatBook" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_pink_a200</item>
        <item name="colorPrimaryVariant">@color/color_blue_grey_200</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_lime_500</item>
        <item name="colorSecondaryVariant">@color/color_lime_500</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="pinkButton">
        <item name="android:layout_width">234dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="backgroundTint">@color/color_pink_a200</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">4dp</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="textAllCaps">true</item>
        <item name="elevation">4dp</item>
        <item name="android:translationZ">2dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="greyButton">
        <item name="android:layout_width">234dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="backgroundTint">@color/color_blue_grey_200</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">4dp</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="textAllCaps">true</item>
        <item name="elevation">4dp</item>
        <item name="android:translationZ">2dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="addRecipeButton">
        <item name="android:layout_width">234dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">4dp</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="textAllCaps">true</item>
        <item name="elevation">4dp</item>
        <item name="android:translationZ">2dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="addIngredientCardViewStyle" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/addIngredientCardViewShape</item>
    </style>


    <style name="addIngredientCardViewShape" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">30dp</item>
        <item name="cornerSizeTopLeft">30dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>
