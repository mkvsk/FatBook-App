<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FatBook" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/pink_a200</item>
        <item name="colorPrimaryVariant">@color/color_blue_grey_200</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_lime_500</item>
        <item name="colorSecondaryVariant">@color/color_lime_500</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/pink_a200</item>
        <!-- Customize your theme here. -->
    </style>

    ///v2.0.0
    <color name="blue_grey_50">#ECEFF1</color>
    <color name="blue_grey_200">#B0BEC5</color>
    <color name="pink_a200">#FF4081</color>
    <color name="blue_grey_900">#263238</color>
    <color name="blue_grey_800">#37474F</color>
    <color name="blue_grey_600">#546E7A</color>
    <color name="blue_grey_100">#CFD8DC</color>

    <color name="main_text">#263238</color>
    <color name="start_fragments_bgr">#FFFFFFFF</color>
    <color name="toolbar_bgr">#ECEFF1</color>
    <color name="ic_color">#263238</color>
    <color name="editText_catdialog_bgr">#ECEFF1</color>

    <color name="btnEnabledColor">#FF4081</color>
    <color name="btnEnabledColor_text">#FFFFFFFF</color>
    <color name="btnDisabledColor">#ECEFF1</color>
    <color name="btnDisabledColor_text">#B0BEC5</color>

    <color name="btnDialogInvalid_text">#FF4081</color>

    ///ic colors
    <color name="ic_visibility_color">#B0BEC5</color>

    <style name="btnPink">
        <item name="android:layout_width">@dimen/btn_pink_w</item>
        <item name="android:layout_height">@dimen/btn_pink_h</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/btnEnabledColor_text</item>
        <item name="backgroundColor">@drawable/selector_start_buttons</item>
        <item name="cornerRadius">30dp</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="textAllCaps">true</item>
        <item name="elevation">4dp</item>
        <item name="android:translationZ">2dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="btnGrey">
        <item name="android:layout_width">@dimen/btn_pink_w</item>
        <item name="android:layout_height">@dimen/btn_pink_h</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/btnDisabledColor_text</item>
        <item name="android:backgroundTint">@color/btnDisabledColor</item>
        <item name="cornerRadius">30dp</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="textAllCaps">true</item>
        <item name="elevation">4dp</item>
        <item name="android:translationZ">2dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="txtWelcome">
        <item name="textAllCaps">true</item>
        <item name="android:textSize">26sp</item>
        <item name="fontFamily">@font/roboto_light</item>
        <item name="android:textColor">@color/main_text</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="txtAppName">
        <item name="android:textSize">46sp</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/pink_a200</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="txtKuzyaDialog">
        <item name="android:layout_width">@dimen/kuzya_dialog_w</item>
        <item name="android:layout_height">@dimen/kuzya_dialog_h</item>
        <item name="android:textSize">11sp</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/main_text</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingBottom">15dp</item>
    </style>

    <style name="txtVersion">
        <item name="android:textSize">11sp</item>
        <item name="fontFamily">@font/roboto_light</item>
        <item name="android:textColor">@color/main_text</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="editText">
        <item name="android:layout_width">@dimen/edittext_start_fragments_w</item>
        <item name="android:layout_height">@dimen/edittext_start_fragments_h</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/main_text</item>
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="signUpAdditionalText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/main_text</item>
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="signUpUnderlinedText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left</item>
        <item name="android:textSize">11sp</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/pink_a200</item>
    </style>

    <style name="disconnectAdditionalText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/pink_a200</item>
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="editTextCode">
        <item name="android:layout_width">@dimen/edittext_verification_code_w</item>
        <item name="android:layout_height">@dimen/edittext_verification_code_h</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/main_text</item>
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

