<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FatBook" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_pink_a200</item>
        <item name="colorPrimaryVariant">@color/color_blue_grey_600</item>
        <item name="colorOnPrimary">@color/color_blue_grey_900</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_lime_500</item>
        <item name="colorSecondaryVariant">@color/color_blue_grey_600</item>
        <item name="colorOnSecondary">@color/color_blue_grey_900</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/blue_grey_900</item>
        <!-- Customize your theme here. -->
    </style>

    ///v2.0.0
    <color name="blue_grey_50">#ECEFF1</color>
    <color name="blue_grey_200">#B0BEC5</color>
    <color name="pink_a200">#FF4081</color>
    <color name="blue_grey_900">#263238</color>
    <color name="blue_grey_800">#37474F</color>
    <color name="blue_grey_600">#546E7A</color>
    <color name="blue_grey_100">#CFD8DC</color>

    <color name="main_text">#FFFFFFFF</color>
    <color name="start_fragments_bgr">#263238</color>
    <color name="toolbar_bgr">#263238</color>
    <color name="ic_color">#FFFFFFFF</color>
    <color name="editText_catdialog_bgr">#37474F</color>

    <style name="btnPink">
        <item name="android:layout_width">235dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="backgroundTint">@color/pink_a200</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">30dp</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="textAllCaps">true</item>
        <item name="elevation">4dp</item>
        <item name="android:translationZ">2dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="txtWelcome">
        <item name="textAllCaps">true</item>
        <item name="android:textSize">26sp</item>
        <item name="fontFamily">@font/roboto_light</item>
        <item name="android:textColor">@color/main_text</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="txtAppName">
        <item name="android:textSize">46sp</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/pink_a200</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="txtKuzyaDialog">
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/main_text</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingBottom">15dp</item>
    </style>

    <style name="txtVersion">
        <item name="android:textSize">11sp</item>
        <item name="fontFamily">@font/roboto_light</item>
        <item name="android:textColor">@color/main_text</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="editText">
        <item name="android:layout_width">235dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/main_text</item>
    </style>

</resources>