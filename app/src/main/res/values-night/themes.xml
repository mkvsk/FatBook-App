<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FatBook" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/pink_a200</item>
        <item name="colorPrimaryVariant">@color/color_blue_grey_600</item>
        <item name="colorOnPrimary">@color/color_blue_grey_900</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_lime_500</item>
        <item name="colorSecondaryVariant">@color/color_blue_grey_600</item>
        <item name="colorOnSecondary">@color/color_blue_grey_900</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/blue_grey_900</item>
        <!-- Customize your theme here. -->
        <item name="toolbarStyle">@style/ToolbarTheme</item>
    </style>

    ///v2.0.0
    <color name="blue_grey_50">#ECEFF1</color>
    <color name="blue_grey_200">#B0BEC5</color>
    <color name="pink_a200">#FF4081</color>
    <color name="blue_grey_900">#263238</color>
    <color name="blue_grey_800">#37474F</color>
    <color name="blue_grey_600">#546E7A</color>
    <color name="blue_grey_100">#CFD8DC</color>

    <color name="main_text">#FFFFFFFF</color>
    <color name="start_fragments_bgr">#263238</color>
    <color name="ic_color">#FFFFFFFF</color>
    <color name="editText_catdialog_bgr">#37474F</color>

    <color name="btnEnabledColor">#FF4081</color>
    <color name="btnEnabledColor_text">#FFFFFFFF</color>
    <color name="btnDisabledColor">#37474F</color>
    <color name="btnDisabledColor_text">#546E7A</color>

    <color name="dialogErrorMess_text">#FF4081</color>

    <color name="vcEnabledColor_text">#FF4081</color>
    <color name="vcDisabledColor_text">#37474F</color>

    <color name="ic_password_visibility">#263238</color>

    ///ic colors
    <color name="ic_bottomnav_color">#B0BEC5</color>
    <color name="ic_userprofile_color">#FFFFFFFF</color>
    <color name="ic_expand_color">#263238</color>

    ///main
    <color name="theme_primary_bgr">#263238</color>
    <color name="theme_toolbar_color">#263238</color>
    <color name="theme_toolbar_text_color">#FFFFFFFF</color>
    <color name="theme_toolbar_ic_color">#FFFFFFFF</color>
    <color name="theme_cardview_bgr">#37474F</color>

    ///fragment user profile
    <color name="tabitem_selected_color">#FF4081</color>
    <color name="tabitem_selected_color_text">#FFFFFFFF</color>
    <color name="tabitem_not_selected_color">#37474F</color>
    <color name="tabitem_not_selected_color_text">#B0BEC5</color>

    <style name="ToolbarTheme" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleTextColor">@color/theme_toolbar_text_color</item>
        <item name="backgroundColor">@color/theme_toolbar_color</item>
    </style>

    <style name="myMaterialCardUser" parent="@style/Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/theme_cardview_bgr</item>
        <item name="elevation">4dp</item>
        <item name="android:translationZ">6dp</item>
        <item name="android:shadowRadius">10</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay_card_custom_corners_userprofile</item>
    </style>

    <style name="ShapeAppearanceOverlay_card_custom_corners_userprofile" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">30dp</item>
    </style>

    <style name="myMaterialCardRecipePreview" parent="@style/Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/theme_cardview_bgr</item>
        <item name="android:translationZ">6dp</item>
        <item name="android:shadowRadius">10</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay_card_custom_corners_recipe_preview</item>
    </style>

    <style name="ShapeAppearanceOverlay_card_custom_corners_recipe_preview" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">30dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomRight">30dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="btnPink">
        <item name="android:layout_width">@dimen/btn_pink_w</item>
        <item name="android:layout_height">@dimen/btn_pink_h</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/btnEnabledColor_text</item>
        <item name="background">@color/btnEnabledColor</item>
        <item name="cornerRadius">30dp</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="textAllCaps">true</item>
        <item name="elevation">4dp</item>
        <item name="android:translationZ">2dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="btnsUserProfile">
        <item name="android:layout_width">@dimen/btn_user_profile_w</item>
        <item name="android:layout_height">@dimen/btn_user_profile_h</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/btnEnabledColor_text</item>
        <item name="background">@color/btnEnabledColor</item>
        <item name="cornerRadius">30dp</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="elevation">4dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:translationZ">2dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textAppearance">@style/myBtnsTextAppearance</item>
    </style>

    <style name="myBtnsTextAppearance" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="android:textSize">13sp</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="txtUserProfile">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/main_text</item>
    </style>

    <style name="txtUserProfileTitle">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/main_text</item>
    </style>

    <style name="txtUserProfileStats">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">9sp</item>
        <item name="android:textColor">@color/main_text</item>
    </style>

    <style name="btnGrey">
        <item name="android:layout_width">@dimen/btn_pink_w</item>
        <item name="android:layout_height">@dimen/btn_pink_h</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/btnDisabledColor_text</item>
        <item name="android:backgroundTint">@color/btnDisabledColor</item>
        <item name="cornerRadius">30dp</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="textAllCaps">true</item>
        <item name="elevation">4dp</item>
        <item name="android:translationZ">2dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="txtWelcome">
        <item name="textAllCaps">true</item>
        <item name="android:textSize">26sp</item>
        <item name="fontFamily">@font/roboto_light</item>
        <item name="android:textColor">@color/main_text</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="txtAppName">
        <item name="android:textSize">46sp</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/pink_a200</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="txtKuzyaDialog">
        <item name="android:layout_width">@dimen/kuzya_dialog_w</item>
        <item name="android:layout_height">@dimen/kuzya_dialog_h</item>
        <item name="android:textSize">11sp</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/main_text</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingBottom">15dp</item>
    </style>

    <style name="txtVersion">
        <item name="android:textSize">11sp</item>
        <item name="fontFamily">@font/roboto_light</item>
        <item name="android:textColor">@color/main_text</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="editText">
        <item name="android:layout_width">@dimen/edittext_start_fragments_w</item>
        <item name="android:layout_height">@dimen/edittext_start_fragments_h</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/main_text</item>
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="etPassword" parent="ThemeOverlay.Material3.TextInputEditText">
        <item name="android:layout_width">@dimen/edittext_start_fragments_w</item>
        <item name="android:layout_height">@dimen/edittext_start_fragments_h</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/main_text</item>
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="signUpAdditionalText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/main_text</item>
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="signUpUnderlinedText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left</item>
        <item name="android:textSize">11sp</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/vcEnabledColor_text</item>
    </style>

    <style name="disconnectAdditionalText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/pink_a200</item>
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="editTextCode">
        <item name="android:layout_width">@dimen/edittext_verification_code_w</item>
        <item name="android:layout_height">@dimen/edittext_verification_code_h</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/main_text</item>
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="myTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabIndicator">@null</item>
        <item name="tabBackground">@drawable/tabs_selector</item>
        <item name="tabSelectedTextColor">@color/tabitem_selected_color_text</item>
        <item name="tabTextColor">@color/tabitem_not_selected_color_text</item>
        <item name="tabTextAppearance">@style/myTabTextAppearance</item>
    </style>

    <style name="myTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">13sp</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="textAllCaps">false</item>
    </style>
</resources>