<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_feed"
    app:startDestination="@id/feed_dest">

    <fragment
        android:id="@+id/feed_dest"
        android:name="online.fatbook.fatbookapp.ui.fragment.FeedFragment"
        android:label="@string/mobile_nav_feed"
        tools:layout="@layout/fragment_feed">

        <action
            android:id="@+id/action_go_to_recipe_view_from_feed"
            app:destination="@id/recipe_view_dest"
            app:exitAnim="@anim/nav_default_enter_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />

        <action
            android:id="@+id/action_go_to_direct_messages_from_feed"
            app:destination="@id/direct_messages_dest"
            app:exitAnim="@anim/nav_default_enter_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />

    </fragment>

    <fragment
        android:id="@+id/recipe_view_dest"
        android:name="online.fatbook.fatbookapp.ui.fragment.recipe.view.RecipeViewFragment"
        android:label="@string/mobile_nav_recipe_view"
        tools:layout="@layout/fragment_recipe_view" />

    <fragment
        android:id="@+id/direct_messages_dest"
        android:name="online.fatbook.fatbookapp.ui.fragment.util.DirectMessagesFragment"
        android:label="@null"
        tools:layout="@layout/fragment_direct_messages" />

</navigation>