<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_feed">

    <fragment
        android:id="@+id/navigation_feed"
        android:name="com.fatbook.fatbookapp.ui.fragment.feed.FeedFragment"
        android:label="@string/title_feed"
        tools:layout="@layout/fragment_feed" />

    <fragment
        android:id="@+id/navigation_ingredients"
        android:name="com.fatbook.fatbookapp.ui.fragment.ingredients.IngredientsFragment"
        android:label="@string/title_add_recipe"
        tools:layout="@layout/fragment_ingredients" />

    <fragment
        android:id="@+id/navigation_add_recipe"
        android:name="com.fatbook.fatbookapp.ui.fragment.add_recipe.AddRecipeFragment"
        android:label="@string/title_add_recipe"
        tools:layout="@layout/fragment_recipe_add" />

    <fragment
        android:id="@+id/navigation_bookmarks"
        android:name="com.fatbook.fatbookapp.ui.fragment.bookmarks.BookmarksFragment"
        android:label="@string/title_feed"
        tools:layout="@layout/fragment_bookmarks" />

    <fragment
        android:id="@+id/navigation_user_profile"
        android:name="com.fatbook.fatbookapp.ui.fragment.user_profile.UserProfileFragment"
        android:label="@string/title_user_profile"
        tools:layout="@layout/fragment_user_profile" />
