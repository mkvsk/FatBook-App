<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_notifications"
    app:startDestination="@id/notification_dest">

    <fragment
        android:id="@+id/notification_dest"
        android:name="online.fatbook.fatbookapp.ui.fragment.NotificationsFragment"
        android:label="@string/nav_notifications">

        <action
            android:id="@+id/action_go_to_recipe_view_from_notifications"
            app:destination="@id/recipe_view_dest"
            app:exitAnim="@anim/nav_default_enter_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>

    <fragment
        android:id="@+id/recipe_view_dest"
        android:name="online.fatbook.fatbookapp.ui.fragment.recipe.view.RecipeViewFragment"
        android:label="@null" />

    <fragment
        android:id="@+id/followers_dest"
        android:name="online.fatbook.fatbookapp.ui.fragment.util.FollowersFragment"
        android:label="@null" />
</navigation>