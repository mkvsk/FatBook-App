    <ImageView
        android:id="@+id/imageView_fill_add_rect_birthday"
        android:layout_width="310dp"
        android:layout_height="55dp"
        android:src="@drawable/rect_for_edittext"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editText_fill_add_name"
        android:layout_marginTop="10dp" />

    <ImageView
        android:id="@+id/imageView_fill_add_birthday"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/icon_bday"
        app:layout_constraintLeft_toLeftOf="@id/imageView_fill_add_rect_birthday"
        app:layout_constraintTop_toTopOf="@id/imageView_fill_add_rect_birthday"
        app:layout_constraintBottom_toBottomOf="@id/imageView_fill_add_rect_birthday"
        android:layout_marginTop="10dp" />

    <EditText
        android:id="@+id/editText_fill_add_birthday"
        android:layout_width="270dp"
        android:layout_height="50dp"
        app:layout_constraintRight_toRightOf="@id/imageView_fill_add_rect_birthday"
        app:layout_constraintTop_toTopOf="@id/imageView_fill_add_rect_birthday"
        app:layout_constraintBottom_toBottomOf="@id/imageView_fill_add_rect_birthday"
        android:textColor="@color/color_grey_900"
        android:inputType="date"
        android:hint="@string/hint_bday_fill_add_info"
        android:fontFamily="@font/roboto_regular"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/imageView_fill_add_rect_bio"
        android:layout_width="310dp"
        android:layout_height="55dp"
        android:src="@drawable/rect_for_edittext"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView_fill_add_rect_birthday"
        android:layout_marginTop="10dp" />

    <ImageView
        android:id="@+id/imageView_fill_add_bio"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/icon_bio"
        app:layout_constraintLeft_toLeftOf="@id/imageView_fill_add_rect_bio"
        app:layout_constraintTop_toTopOf="@id/imageView_fill_add_rect_bio"
        app:layout_constraintBottom_toBottomOf="@id/imageView_fill_add_rect_bio"
        android:layout_marginTop="10dp" />

    <EditText
        android:id="@+id/editText_fill_add_bio"
        android:layout_width="270dp"
        android:layout_height="50dp"
        app:layout_constraintRight_toRightOf="@id/imageView_fill_add_rect_bio"
        app:layout_constraintTop_toTopOf="@id/imageView_fill_add_rect_bio"
        app:layout_constraintBottom_toBottomOf="@id/imageView_fill_add_rect_bio"
        android:textColor="@color/color_grey_900"
        android:inputType="text"
        android:hint="@string/hint_bio_fill_add_info"
        android:fontFamily="@font/roboto_regular"
        android:textSize="16sp"
        android:maxLength="245"/>

    <Button
        android:id="@+id/button_fill_add_save"
        android:layout_width="234dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/color_pink_a200"
        android:elevation="6dp"
        android:translationZ="4dp"
        android:stateListAnimator="@null"
        android:text="@string/text_button_save_fill_add_info"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:fontFamily="@font/roboto_light"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="120dp"/>

    <TextView
        android:id="@+id/textView_fill_add_copyright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tag_copyright"
        android:textColor="@color/color_blue_grey_200"
        android:textSize="11sp"
        android:fontFamily="@font/roboto_regular"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingBottom="10dp" />

</androidx.constraintlayout.widget.ConstraintLayout>