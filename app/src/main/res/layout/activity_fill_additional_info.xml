<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_blue_grey_50"
    tools:context=".ui.activity.fill_additional_info.FillAdditionalInfoActivity">

    <TextView
        android:id="@+id/textView_fill_add_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_username_fill_add_info"
        android:fontFamily="@font/roboto_regular"
        android:textSize="20sp"
        android:textColor="@color/color_pink_a200"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingTop="60dp" />

    <ImageView
        android:id="@+id/imageView_fill_add_user_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/default_profile_photo_light"
        android:elevation="4dp"
        android:background="@drawable/round"
        android:translationZ="2dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView_fill_add_username"
        android:layout_margin="20dp" />

    <ImageView
        android:id="@+id/imageView_fill_add_rect_name"
        android:layout_width="310dp"
        android:layout_height="55dp"
        android:src="@drawable/rect_for_edittext"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView_fill_add_user_image"
        android:layout_marginTop="20dp"
        />

    <ImageView
        android:id="@+id/imageView_fill_add_name"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/icon_name"
        app:layout_constraintLeft_toLeftOf="@id/imageView_fill_add_rect_name"
        app:layout_constraintTop_toTopOf="@id/imageView_fill_add_rect_name"
        app:layout_constraintBottom_toBottomOf="@id/imageView_fill_add_rect_name"
        android:layout_marginTop="10dp"
        />

    <EditText
        android:id="@+id/editText_fill_add_name"
        android:layout_width="270dp"
        android:layout_height="50dp"
        app:layout_constraintRight_toRightOf="@id/imageView_fill_add_rect_name"
        app:layout_constraintTop_toTopOf="@id/imageView_fill_add_rect_name"
        app:layout_constraintBottom_toBottomOf="@id/imageView_fill_add_rect_name"
        android:textColor="@color/color_grey_900"
        android:hint="@string/hint_name_fill_add_info"
        android:fontFamily="@font/roboto_regular"
        android:textSize="16sp"
        />

