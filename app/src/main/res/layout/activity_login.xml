<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_blue_grey_50">

    <TextView
        android:id="@+id/textView_login_app_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_regular"
        android:layout_marginBottom="120dp"
        android:text="@string/title_fatbook_a_login"
        android:textColor="@color/color_pink_a200"
        android:textSize="45sp"
        android:layout_marginTop="45dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/textView_login_cat_dialog"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:fontFamily="@font/roboto_regular"
        android:text="@string/cat_dialog_login"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/imageView_login_cat_dialog"
        app:layout_constraintLeft_toLeftOf="@id/imageView_login_cat_dialog"
        app:layout_constraintRight_toRightOf="@id/imageView_login_cat_dialog"
        app:layout_constraintTop_toTopOf="@id/imageView_login_cat_dialog" />

    <ImageView
        android:id="@+id/imageView_login_cat_dialog"
        android:layout_width="150dp"
        android:rotationY="180"
        android:paddingTop="15dp"
        android:layout_height="wrap_content"
        android:src="@drawable/dialog"
        app:layout_constraintTop_toTopOf="@id/imageView_login_kuzya"
        app:layout_constraintLeft_toRightOf="@id/imageView_login_kuzya"
        android:layout_marginRight="80dp"
        android:layout_marginTop="-30dp"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/imageView_login_kuzya"
        android:layout_marginBottom="100dp"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/kuzya_username"
        app:layout_constraintBottom_toTopOf="@+id/button_login_next"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/imageView_login_icon_accepted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:elevation="8dp"
        android:src="@drawable/icon_accepted"
        android:translationZ="6dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/editText_login"
        app:layout_constraintRight_toRightOf="@id/editText_login"
        app:layout_constraintTop_toTopOf="@id/editText_login" />

    <EditText
        android:id="@+id/editText_login"
        android:layout_width="234dp"
        android:layout_height="40dp"
        android:autofillHints="@null"
        android:background="@drawable/round_corner_edittext_login"
        android:fontFamily="@font/roboto_regular"
        android:hint="@string/hint_username_login"
        android:inputType="text"
        android:maxLength="16"
        android:textAlignment="center"
        android:textColor="@color/color_grey_900"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/username_login_description_label"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/username_login_description_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_regular"
        android:paddingTop="5dp"
        android:paddingBottom="20dp"
        android:text="@string/text_requirements_login"
        android:textColor="@color/color_blue_grey_200"
        android:textSize="9sp"
        app:layout_constraintBottom_toTopOf="@id/button_login_next"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/imageView_login_arrow_next"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_margin="10dp"
        android:elevation="6dp"
        android:src="@drawable/arrow_right"
        android:translationZ="6dp"
        app:layout_constraintBottom_toBottomOf="@id/button_login_next"
        app:layout_constraintRight_toRightOf="@id/button_login_next"
        app:layout_constraintTop_toTopOf="@+id/button_login_next" />

    <Button
        android:id="@+id/button_login_next"
        style="@style/btnGrey"
        android:layout_marginBottom="30dp"
        android:text="@string/btn_next_login"
        app:layout_constraintBottom_toTopOf="@id/textView_login_tagline"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/textView_login_tagline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/roboto_regular"
        android:text="@string/tagline_fatbook"
        android:textColor="@color/color_blue_grey_200"
        android:textSize="13sp"
        app:layout_constraintBottom_toTopOf="@+id/textView_login_copyright"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/textView_login_copyright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_regular"
        android:text="@string/tag_copyright"
        android:textColor="@color/color_blue_grey_200"
        android:textSize="11sp"
        app:layout_constraintBottom_toTopOf="@id/textView_login_version"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/textView_login_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_regular"
        android:paddingBottom="10dp"
        android:text="@string/tag_version"
        android:textColor="@color/color_blue_grey_200"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>