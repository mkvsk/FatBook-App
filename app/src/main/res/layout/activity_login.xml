<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_blue_grey_50"
    tools:context=".ui.activity.login.LoginActivity">

    <TextView
        android:id="@+id/textView_Welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_light"
        android:paddingTop="88dp"
        android:text="@string/title_welcome_to"
        android:textColor="@color/color_grey_900"
        android:textSize="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_FatBook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_regular"
        android:paddingBottom="60dp"
        android:text="@string/title_fatbook_activity_login"
        android:textColor="@color/color_pink_a200"
        android:textSize="45sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView_Welcome" />

    <ImageView
        android:id="@+id/imageView_catChef"
        android:layout_width="200dp"
        android:layout_height="300dp"
        app:srcCompat="@drawable/kuzya_welcome"
        android:contentDescription="@null"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView_FatBook"
        android:paddingBottom="20dp" />

    <Button
        android:id="@+id/button_LogInWithGoogle"
        android:layout_width="234dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/color_pink_a200"
        android:elevation="6dp"
        android:translationZ="4dp"
        android:stateListAnimator="@null"
        android:text="@string/title_button_login_googleplay"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:fontFamily="@font/roboto_light"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView_catChef" />

    <TextView
        android:id="@+id/textView_FatBook_tagline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tagline_fatbook"
        android:textColor="@color/color_blue_grey_200"
        android:textSize="14sp"
        android:fontFamily="@font/roboto_regular"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_LogInWithGoogle"
        android:layout_marginTop="23dp" />

    <ImageView
        android:id="@+id/imageView_google_play"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:elevation="10dp"
        android:contentDescription="@string/login"
        app:layout_constraintBottom_toBottomOf="@id/button_LogInWithGoogle"
        app:layout_constraintLeft_toLeftOf="@id/button_LogInWithGoogle"
        app:layout_constraintTop_toTopOf="@id/button_LogInWithGoogle"
        android:layout_marginLeft="24dp"
        app:srcCompat="@drawable/icon_googleplay" />

    <TextView
        android:id="@+id/textView_copyrigh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tag_copyrigh"
        android:textColor="@color/color_blue_grey_200"
        android:textSize="11sp"
        android:fontFamily="@font/roboto_regular"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingBottom="10dp" />

</androidx.constraintlayout.widget.ConstraintLayout>