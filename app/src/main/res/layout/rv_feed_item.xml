<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="350dp"
    android:layout_height="155dp"
    android:layout_marginBottom="15dp"
    android:background="@drawable/feed_recipe_previev_card_large">

    <TextView
        android:id="@+id/textView_recipe_card_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="6dp"
        app:layout_constraintLeft_toLeftOf="@id/imageView_recipe_previev_card_photo_large"
        app:layout_constraintTop_toTopOf="@id/imageView_recipe_previev_card_photo_large"
        app:layout_constraintBottom_toBottomOf="@id/imageView_recipe_previev_card_photo_large"
        android:text="@string/title_recipe_card_large"
        android:textColor="@color/white"
        android:fontFamily="@font/roboto_medium"
        android:textSize="16sp"
        android:textAlignment="textStart"
        android:layout_marginLeft="20dp"
        android:lines="1"
        />

    <TextView
        android:id="@+id/textView_recipe_card_author_large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="6dp"
        app:layout_constraintTop_toBottomOf="@id/textView_recipe_card_title"
        app:layout_constraintLeft_toLeftOf="@id/imageView_recipe_previev_card_photo_large"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="@string/title_recipe_card_large_author"
        android:textColor="@color/white"
        android:fontFamily="@font/roboto_regular"
        android:textSize="12sp"
        android:textAlignment="textStart"
        android:lines="1" />

    <ImageView
        android:id="@+id/imageView_recipe_previev_card_fork_lagre"
        android:layout_width="6dp"
        android:layout_height="20dp"
        android:elevation="6dp"
        android:src="@drawable/fork"
        app:layout_constraintTop_toBottomOf="@id/textView_recipe_card_author_large"
        app:layout_constraintLeft_toLeftOf="@id/imageView_recipe_previev_card_photo_large"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/textView_recipe_card_forks_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="6dp"
        app:layout_constraintLeft_toRightOf="@id/imageView_recipe_previev_card_fork_lagre"
        app:layout_constraintBottom_toBottomOf="@id/imageView_recipe_previev_card_fork_lagre"
        android:text="@string/text_recipe_card_large_forks"
        android:textColor="@color/white"
        android:fontFamily="@font/roboto_regular"
        android:textSize="8sp"
        android:layout_marginLeft="5dp" />

    <TextView
        android:id="@+id/textView_forks_counter_card_lagre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="6dp"
        app:layout_constraintLeft_toRightOf="@id/textView_recipe_card_forks_text"
        app:layout_constraintBottom_toBottomOf="@id/imageView_recipe_previev_card_fork_lagre"
        android:layout_marginLeft="5dp"
        android:text="@string/value_total_forks_card_large"
        android:textColor="@color/white"
        android:textSize="8sp"
        android:fontFamily="@font/roboto_regular"/>

    <ImageView
        android:id="@+id/imageView_icon_add_to_fav_card_large"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:elevation="6dp"
        app:layout_constraintRight_toRightOf="@id/imageView_recipe_previev_card_photo_large"
        app:layout_constraintBottom_toBottomOf="@id/textView_forks_counter_card_lagre"
        android:layout_marginRight="20dp"
        android:background="@drawable/icon_add_to_fav"
        />

    <ImageView
        android:id="@+id/imageView_recipe_previev_card_photo_large"
        android:layout_width="350dp"
        android:layout_height="155dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/kartoshka"
        />

    <ImageView
        android:id="@+id/imageView_card_gradient_large"
        android:layout_width="350dp"
        android:layout_height="155dp"
        app:layout_constraintLeft_toLeftOf="@id/imageView_recipe_previev_card_photo_large"
        app:layout_constraintRight_toRightOf="@id/imageView_recipe_previev_card_photo_large"
        app:layout_constraintTop_toTopOf="@id/imageView_recipe_previev_card_photo_large"
        app:layout_constraintBottom_toBottomOf="@id/imageView_recipe_previev_card_photo_large"
        android:background="@drawable/card_gradient_large"
        />

</androidx.constraintlayout.widget.ConstraintLayout>