<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardview_rv_recipe_methods_categories_items"
        style="@style/myMaterialCardMethodCategories"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/cards_margin_start"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="@dimen/cards_margin_end"
        android:layout_marginBottom="10dp"
        app:rippleColor="@color/colorPrimaryRipple"
        app:strokeColor="@color/pink_a200"
        app:strokeWidth="0dp"
        app:cardElevation="6dp"
        app:cardPreventCornerOverlap="false"
        app:contentPaddingLeft="5dp"
        app:contentPaddingRight="5dp"
        app:contentPaddingBottom="5dp"
        app:contentPaddingTop="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_rv_method_categories"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageview__rv_recipe_methods_categories_items"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/null_radio_button"
                android:src="@drawable/rv_boiling"
                app:layout_constraintBottom_toTopOf="@id/textview_rv_recipe_methods_categories_items"
                app:layout_constraintDimensionRatio="H,1:1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textview_rv_recipe_methods_categories_items"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               android:textSize="11sp"
                android:ellipsize="end"
                android:fontFamily="@font/roboto_regular"
                android:lines="2"
                android:maxLines="2"
                android:text="Method"
                android:gravity="center"
                android:textColor="@drawable/selector_method_categories_text"
                app:layout_constraintTop_toBottomOf="@id/imageview__rv_recipe_methods_categories_items"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>