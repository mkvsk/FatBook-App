        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView_kuzya_feed"
        android:layout_width="83dp"
        android:layout_height="90dp"
        android:paddingTop="7dp"
        android:src="@drawable/kuzya_eating"
