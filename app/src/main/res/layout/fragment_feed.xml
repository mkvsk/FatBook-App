        android:layout_height="155dp"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/textView_all_recipes_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/rv_best_recipes"
        app:layout_constraintLeft_toLeftOf="@id/rv_recipes_categories"
        android:layout_marginTop="20dp"
        android:text="@string/title_all_recipes_feed"
        android:fontFamily="@font/roboto_regular"
        android:textSize="11sp"
        android:textColor="@color/color_blue_grey_600"/>

