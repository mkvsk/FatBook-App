    <TextView
        android:id="@+id/textView_all_categories_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/editText_search_feed"
        app:layout_constraintLeft_toLeftOf="@id/editText_search_feed"
        android:layout_marginTop="20dp"
        android:text="@string/title_categories_feed"
        android:fontFamily="@font/roboto_regular"
        android:textSize="11sp"
        android:textColor="@color/color_blue_grey_600"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_recipes_categories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/textView_all_categories_title"
        app:layout_constraintLeft_toLeftOf="@id/textView_all_categories_title"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/rv_feed_categories" />

    <TextView
        android:id="@+id/textView_best_recipes_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/rv_recipes_categories"
        app:layout_constraintLeft_toLeftOf="@id/rv_recipes_categories"
        android:layout_marginTop="20dp"
        android:text="@string/title_best_recipes_feed"
        android:fontFamily="@font/roboto_regular"
        android:textSize="11sp"
        android:textColor="@color/color_blue_grey_600"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_best_recipes"
        app:layout_constraintLeft_toLeftOf="@id/textView_best_recipes_title"
