<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_blue_grey_50"
    tools:context=".ui.fragment.feed.FeedFragment">

    <TextView
        android:id="@+id/textView_FatBook_feed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:fontFamily="@font/roboto_regular"
        android:text="@string/title_fatbook_feed"
        android:textAlignment="center"
        android:textColor="@color/color_pink_a200"
        android:textSize="32sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView_kuzya_feed"
        android:layout_width="83dp"
        android:layout_height="90dp"
        android:paddingTop="7dp"
        android:src="@drawable/kuzya_eating"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/textView_FatBook_feed"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />


    <EditText
        android:id="@+id/editText_search_feed"
        android:layout_width="350dp"
        android:layout_height="55dp"
        android:layout_marginTop="13dp"
        android:background="@drawable/round_corner_rect_white"
        android:hint="@string/hint_search_recipe_feed"
        android:textColor="@color/color_blue_grey_600"
        android:fontFamily="@font/roboto_regular"
        android:textSize="18sp"
        android:paddingLeft="20dp"
        android:lines="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView_FatBook_feed" />

    <TextView
        android:id="@+id/textView_all_categories_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/editText_search_feed"
        app:layout_constraintLeft_toLeftOf="@id/editText_search_feed"
        android:layout_marginTop="20dp"
        android:text="@string/title_categories_feed"
        android:fontFamily="@font/roboto_regular"
        android:textSize="11sp"
        android:textColor="@color/color_blue_grey_600"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_recipes_categories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/textView_all_categories_title"
        app:layout_constraintLeft_toLeftOf="@id/textView_all_categories_title"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/rv_feed_categories" />

    <TextView
        android:id="@+id/textView_best_recipes_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/rv_recipes_categories"
        app:layout_constraintLeft_toLeftOf="@id/rv_recipes_categories"
        android:layout_marginTop="20dp"
        android:text="@string/title_best_recipes_feed"
        android:fontFamily="@font/roboto_regular"
        android:textSize="11sp"
        android:textColor="@color/color_blue_grey_600"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_best_recipes"
        app:layout_constraintLeft_toLeftOf="@id/textView_best_recipes_title"
        app:layout_constraintTop_toBottomOf="@id/textView_best_recipes_title"
        tools:listitem="@layout/rv_feed_best_recipes"
        android:layout_width="wrap_content"
        android:layout_height="155dp"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/textView_all_recipes_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/rv_best_recipes"
        app:layout_constraintLeft_toLeftOf="@id/rv_recipes_categories"
        android:layout_marginTop="20dp"
        android:text="@string/title_all_recipes_feed"
        android:fontFamily="@font/roboto_regular"
        android:textSize="11sp"
        android:textColor="@color/color_blue_grey_600"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        tools:listitem="@layout/rv_feed_item"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_all_recipes_title" />

</androidx.constraintlayout.widget.ConstraintLayout>