<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_blue_grey_50"
    tools:context=".ui.activity.PasswordActivity">

    <TextView
        android:id="@+id/textView_password_app_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_regular"
        android:layout_marginBottom="120dp"
        android:text="@string/title_fatbook_introduce"
        android:textColor="@color/color_pink_a200"
        android:textSize="45sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_password_cat_dialog"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


    <TextView
        android:id="@+id/textView_password_cat_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:fontFamily="@font/roboto_light"
        android:paddingTop="70dp"
        android:text="@string/text_dialog_password"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@id/imageView_password_cat_dialog"
        app:layout_constraintLeft_toLeftOf="@id/imageView_password_cat_dialog"
        app:layout_constraintRight_toRightOf="@id/imageView_password_cat_dialog"
        app:layout_constraintTop_toTopOf="@id/imageView_password_cat_dialog" />

    <ImageView
        android:id="@+id/imageView_password_cat_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/dialog"
        app:layout_constraintBottom_toTopOf="@+id/imageView_password_kuzya"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/imageView_password_kuzya"
        android:layout_width="180dp"
        android:layout_height="220dp"
        android:layout_marginBottom="130dp"
        android:src="@drawable/kuzya_login"
        app:layout_constraintBottom_toTopOf="@+id/button_password_next"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/imageView_password_icon_accepted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:elevation="8dp"
        android:src="@drawable/icon_accepted"
        android:translationZ="6dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/editText_password_username"
        app:layout_constraintRight_toRightOf="@id/editText_password_username"
        app:layout_constraintTop_toTopOf="@id/editText_password_username" />

    <EditText
        android:id="@+id/editText_password_username"
        android:layout_width="234dp"
        android:layout_height="40dp"
        android:autofillHints="@null"
        android:background="@drawable/round_corner_edittext_login"
        android:fontFamily="@font/roboto_regular"
        android:hint="@string/hint_password"
        android:maxLength="16"
        android:textAlignment="center"
        android:textColor="@color/color_grey_900"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/username_password_description_label"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/username_password_description_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_regular"
        android:paddingTop="5dp"
        android:paddingBottom="20dp"
        android:text="@string/text_requirements_introduce"
        android:textColor="@color/color_blue_grey_200"
        android:textSize="9sp"
        app:layout_constraintBottom_toTopOf="@+id/button_password_next"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/imageView_password_arrow_next"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_margin="10dp"
        android:elevation="6dp"
        android:src="@drawable/arrow_next"
        android:translationZ="6dp"
        app:layout_constraintBottom_toBottomOf="@id/button_password_next"
        app:layout_constraintRight_toRightOf="@id/button_password_next"
        app:layout_constraintTop_toTopOf="@+id/button_password_next" />

    <Button
        android:id="@+id/button_password_next"
        style="@style/greyButton"
        android:layout_marginBottom="30dp"
        android:text="@string/text_button_next_introduce"
        app:layout_constraintBottom_toTopOf="@id/textView_password_tagline"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/textView_password_tagline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/roboto_regular"
        android:text="@string/tagline_fatbook"
        android:textColor="@color/color_blue_grey_200"
        android:textSize="13sp"
        app:layout_constraintBottom_toTopOf="@+id/textView_password_copyright"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/textView_password_copyright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_regular"
        android:text="@string/tag_copyright"
        android:textColor="@color/color_blue_grey_200"
        android:textSize="11sp"
        app:layout_constraintBottom_toTopOf="@id/textView_password_version"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/textView_password_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_regular"
        android:paddingBottom="10dp"
        android:text="@string/tag_version"
        android:textColor="@color/color_blue_grey_200"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>