<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:layout_marginBottom="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/rv_card_recipe_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/round_corner_rect_white"
        tools:ignore="MissingConstraints" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageView_rv_card_recipe_photo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_default_recipe_image"
        android:background="@color/color_blue_grey_50"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize4Percent"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/textView_rv_card_recipe_title"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:lines="2"
        android:fontFamily="@font/roboto_bold"
        android:text="@string/title_recipe_preview_rv"
        android:textColor="@color/color_blue_grey_600"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@id/imageView_rv_card_recipe_photo"
        app:layout_constraintTop_toTopOf="@id/imageView_rv_card_recipe_photo"
        android:layout_marginLeft="10dp" />

    <TextView
        android:id="@+id/textView_rv_card_recipe_author_by"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="1"
        app:layout_constraintTop_toBottomOf="@id/textView_rv_card_recipe_title"
        app:layout_constraintLeft_toLeftOf="@id/textView_rv_card_recipe_title"
        android:text="@string/title_recipe_preview_by_rv"
        android:fontFamily="@font/roboto_regular"
        android:textSize="11sp"
        android:textColor="@color/color_blue_grey_600"/>

    <TextView
        android:id="@+id/textView_rv_card_recipe_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="1"
        android:layout_marginStart="3dp"
        app:layout_constraintTop_toTopOf="@id/textView_rv_card_recipe_author_by"
        app:layout_constraintLeft_toRightOf="@id/textView_rv_card_recipe_author_by"
        android:text="@string/hint_recipe_by_rv_profile_my_recipes"
        android:fontFamily="@font/roboto_regular"
        android:textSize="11sp"
        android:textColor="@color/color_blue_grey_600"/>


    <ImageView
        android:id="@+id/imageView_rv_card_recipe_divider"
        android:layout_width="220dp"
        android:layout_height="1dp"
        app:layout_constraintLeft_toLeftOf="@id/textView_rv_card_recipe_author_by"
        app:layout_constraintTop_toBottomOf="@id/textView_rv_card_recipe_author_by"
        android:layout_marginTop="5dp"
        android:src="@drawable/rect_for_edittext"/>

    <ImageView
        android:id="@+id/imageView_rv_card_recipe_bookmarks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/imageView_rv_card_recipe_photo"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="10dp"
        android:src="@drawable/icon_bookmarks_unchecked"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/imageView_rv_card_recipe_fork"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="@id/imageView_rv_card_recipe_bookmarks"
        app:layout_constraintLeft_toLeftOf="@id/imageView_rv_card_recipe_bookmarks"
        app:layout_constraintBottom_toBottomOf="@id/imageView_rv_card_recipe_photo"
        android:src="@drawable/icon_fork_checked"/>

    <TextView
        android:id="@+id/textView_rv_card_recipe_forks_avg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="1"
        app:layout_constraintRight_toLeftOf="@id/imageView_rv_card_recipe_fork"
        app:layout_constraintBottom_toBottomOf="@id/imageView_rv_card_recipe_photo"
        android:layout_marginRight="5dp"
        android:text="@string/value_recipe_preview_forks_amount_rv"
        android:fontFamily="@font/roboto_medium"
        android:textSize="9sp"
        android:textColor="@color/color_blue_grey_200"/>

</androidx.constraintlayout.widget.ConstraintLayout>