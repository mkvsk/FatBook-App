<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_blue_grey_50"
    tools:context=".ui.fragment.RecipeViewFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout_full_recipe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_blue_grey_50"
        tools:ignore="MissingConstraints">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar_view_recipe"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/color_blue_grey_200"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:navigationIcon="@drawable/arrow_left"
            app:navigationIconTint="@color/color_blue_grey_600"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:title="Full recipe"
            app:titleTextColor="@color/color_blue_grey_600">

            <com.google.android.material.imageview.ShapeableImageView
                android:visibility="gone"
                android:id="@+id/kuzya_recipe_view"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="end"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:rotationY="180"
                android:src="@drawable/kuzya_login" />

        </com.google.android.material.appbar.MaterialToolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView_full_recipe_card_bgr"
                android:layout_width="match_parent"
                android:layout_height="440dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="25dp"
                android:background="@drawable/round_corner_rect_white"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView_full_recipe_icon_bookmarks"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="10dp"
                android:src="@drawable/icon_bookmarks_unchecked"
                android:tag="tag_bookmarks_unchecked"
                app:layout_constraintRight_toRightOf="@id/imageView_full_recipe_card_bgr"
                app:layout_constraintTop_toTopOf="@id/imageView_full_recipe_card_bgr" />

            <EditText
                android:id="@+id/editText_full_recipe_name"
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@null"
                android:fontFamily="@font/roboto_bold"
                android:gravity="start"
                android:minLines="1"
                android:maxLines="3"
                android:text="@string/hint_add_recipe_title"
                android:textAlignment="textStart"
                android:textColor="@color/color_blue_grey_600"
                android:textSize="18sp"
                android:padding="5dp"
                app:layout_constraintLeft_toLeftOf="@id/imageView_full_recipe_card_bgr"
                app:layout_constraintTop_toTopOf="@id/imageView_full_recipe_icon_bookmarks"
                tools:ignore="RtlCompat" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imageView_full_recipe_image"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginStart="35dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="35dp"
                android:background="@color/color_blue_grey_50"
                android:scaleType="centerCrop"
                android:src="@drawable/image_recipe_default"
                app:layout_constraintLeft_toLeftOf="@id/imageView_full_recipe_card_bgr"
                app:layout_constraintRight_toRightOf="@id/imageView_full_recipe_card_bgr"
                app:layout_constraintTop_toBottomOf="@id/editText_full_recipe_name"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize4Percent" />

            <TextView
                android:id="@+id/textView_full_recipe_by_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/title_full_recipe_by"
                android:textColor="@color/color_blue_grey_600"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@id/textView_full_recipe_forks_quantity"
                app:layout_constraintLeft_toLeftOf="@id/imageView_full_recipe_image" />

            <TextView
                android:id="@+id/textView_full_recipe_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/title_full_recipe_username"
                android:textColor="@color/color_blue_grey_600"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@id/textView_full_recipe_by_label"
                app:layout_constraintLeft_toRightOf="@id/textView_full_recipe_by_label" />

            <ImageView
                android:id="@+id/imageView_full_recipe_fork"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/icon_fork_unchecked"
                android:tag="tag_fork_unchecked"
                app:layout_constraintBottom_toBottomOf="@id/imageView_full_recipe_card_bgr"
                app:layout_constraintLeft_toLeftOf="@id/imageView_full_recipe_icon_bookmarks"
                app:layout_constraintRight_toRightOf="@id/imageView_full_recipe_icon_bookmarks" />

            <TextView
                android:id="@+id/textView_full_recipe_forks_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/full_recipe_forks_quantity"
                android:textColor="@color/color_blue_grey_200"
                android:textSize="9sp"
                app:layout_constraintBottom_toBottomOf="@id/imageView_full_recipe_fork"
                app:layout_constraintRight_toLeftOf="@id/imageView_full_recipe_fork" />

            <TextView
                android:id="@+id/textView_full_recipe_view_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/title_full_recipe_ingredients"
                android:textColor="@color/color_blue_grey_200"
                android:textSize="14sp"
                app:layout_constraintLeft_toLeftOf="@id/imageView_full_recipe_card_bgr"
                app:layout_constraintTop_toBottomOf="@id/imageView_full_recipe_card_bgr" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_recipe_view_ingredients"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:overScrollMode="never"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView_full_recipe_view_label"
                tools:listitem="@layout/rv_add_new_recipe_ingredients" />

            <TextView
                android:id="@+id/textView_full_recipe_instruction_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/title_full_recipe_instruction"
                android:textColor="@color/color_blue_grey_200"
                android:textSize="14sp"
                app:layout_constraintLeft_toLeftOf="@id/textView_full_recipe_view_label"
                app:layout_constraintTop_toBottomOf="@id/rv_recipe_view_ingredients" />

            <EditText
                android:id="@+id/editText_full_recipe_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="25dp"
                android:layout_marginBottom="100dp"
                android:background="@drawable/round_corner_rect_white"
                android:fontFamily="@font/roboto_light"
                android:gravity="start"
                android:minLines="1"
                android:maxLines="30"
                android:padding="15dp"
                android:text="@string/text_full_recipe_instruction"
                android:textAlignment="gravity"
                android:textColor="@color/color_blue_grey_600"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@id/textView_full_recipe_instruction_label"
                app:layout_constraintTop_toBottomOf="@id/textView_full_recipe_instruction_label" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>