        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp"
        android:background="@drawable/selector_radio_btns"
        android:elevation="4dp"
        android:translationZ="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
