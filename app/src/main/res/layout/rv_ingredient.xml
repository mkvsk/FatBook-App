<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="43dp"
    android:paddingRight="1dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageview_rv_recipe_ingredient"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp"
        android:background="@color/theme_primary_bgr"
        android:elevation="4dp"
        android:translationZ="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearance="@style/ShapeAppearanceOverlay.App.CornerSize50Percent" />

    <TextView
        android:id="@+id/textview_ingredient_title_rv_ingredient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="120dp"
        android:layout_marginStart="15dp"
        android:elevation="6dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Ingredient ingredient ingredient ingredient ingredient"
        android:textAppearance="@style/recipeCreateIngredientsTextStyle"
        android:textColor="@color/main_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textview_ingredient_kcals_title_rv_ingredient"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:elevation="6dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="(1000 kcal/100 graaaaaaaaaaaaaaaaaaaaa)"
        android:textAppearance="@style/recipeCreateIngredientsTextStyle"
        android:textColor="@color/rv_ingredients_kcals"
        android:layout_marginEnd="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/textview_ingredient_title_rv_ingredient"
        app:layout_constraintRight_toRightOf="@id/imageview_rv_recipe_ingredient"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>