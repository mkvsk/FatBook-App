<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_blue_grey_50"
    tools:context=".ui.fragment.RecipeCreateFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout_recipe_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_blue_grey_50"
        tools:ignore="MissingConstraints">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar_recipe_add"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/color_blue_grey_200"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:title="@string/toolbar_recipe_create"
            app:titleTextColor="@color/color_blue_grey_600">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="end"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:rotationY="180"
                android:src="@drawable/kuzya_eating" />

        </com.google.android.material.appbar.MaterialToolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageButton
                android:id="@+id/button_user_profile_add_photo"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:backgroundTint="@color/white"
                android:src="@drawable/icon_add_recipe_photo"
                android:elevation="6dp"
                android:scaleType="centerCrop"
                android:translationZ="4dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginStart="25dp"
                android:layout_marginTop="25dp"/>

            <EditText
                android:id="@+id/editText_recipe_add_title"
                android:layout_width="250dp"
                android:layout_height="75dp"
                android:autofillHints="@null"
                android:background="@drawable/edit_mode_bgr"
                android:fontFamily="@font/roboto_medium"
                android:hint="@string/hint_add_recipe_title"
                android:maxLines="2"
                android:minLines="1"
                android:padding="10dp"
                android:textColor="@color/color_blue_grey_600"
                android:textSize="16sp"
                android:gravity="left"
                app:layout_constraintTop_toTopOf="@id/button_user_profile_add_photo"
                app:layout_constraintBottom_toBottomOf="@id/button_user_profile_add_photo"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginEnd="25dp"/>

            <TextView
                android:id="@+id/textView_recipe_add_ingredients_label"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/title_add_recipe_ingredients"
                android:textColor="@color/color_blue_grey_600"
                android:textSize="14sp"
                android:layout_marginStart="25dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button_user_profile_add_photo" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_recipe_add_ingredients"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxHeight="220dp"
                android:paddingBottom="15dp"
                android:overScrollMode="never"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView_recipe_add_ingredients_label"
                tools:listitem="@layout/rv_add_new_recipe_ingredients" />

            <ImageButton
                android:id="@+id/button_recipe_add_ingredient_add"
                android:layout_width="220dp"
                android:layout_height="45dp"
                android:layout_marginTop="5dp"
                android:backgroundTint="@color/color_lime_500"
                android:elevation="4dp"
                android:src="@drawable/icon_plus"
                android:translationZ="2dp"
                android:stateListAnimator="@null"
                android:layout_marginStart="25dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rv_recipe_add_ingredients" />

            <TextView
                android:id="@+id/textView_recipe_add_description_label"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/title_add_recipe_description"
                android:textColor="@color/color_blue_grey_600"
                android:textSize="14sp"
                app:layout_constraintLeft_toLeftOf="@id/button_recipe_add_ingredient_add"
                app:layout_constraintTop_toBottomOf="@+id/button_recipe_add_ingredient_add" />

            <EditText
                android:id="@+id/editText_recipe_add_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit_mode_bgr"
                android:fontFamily="@font/roboto_light"
                android:gravity="start"
                android:hint="@string/hint_add_recipe_description"
                android:lines="5"
                android:maxLines="30"
                android:minLines="5"
                android:padding="10dp"
                android:textColor="@color/color_blue_grey_600"
                android:textSize="16sp"
                app:layout_constraintLeft_toLeftOf="@id/textView_recipe_add_description_label"
                app:layout_constraintRight_toRightOf="@id/textView_recipe_add_description_label"
                app:layout_constraintTop_toBottomOf="@id/textView_recipe_add_description_label" />

            <Button
                android:id="@+id/button_recipe_add_save"
                style="@style/pinkButton"
                android:layout_marginTop="20dp"
                android:text="@string/btn_save_recipe_create"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/editText_recipe_add_description" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <ImageView
        android:id="@+id/imageView_recipe_add_kuzya_bgr"
        android:src="@drawable/kuzya_eating"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="50dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.4"
        android:rotationY="180"
        android:elevation="-1dp"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>