<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_primary_bgr"
    tools:context=".ui.fragment.recipe.create.RecipeCreateFirstStageFragment">

    <include layout="@layout/include_progress_overlay" />

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout_recipe_create_1_stage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <androidx.appcompat.widget.Toolbar xmlns:local="http://schemas.android.com/apk/res-auto"
            android:id="@+id/toolbar_recipe_create_1_stage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/theme_toolbar_color"
            android:minHeight="?attr/actionBarSize"
            app:layout_scrollFlags="scroll|enterAlways"
            local:navigationIcon="@null"
            local:popupTheme="@style/Theme.AppCompat.Light.NoActionBar"
            local:theme="@style/ThemeOverlay.AppCompat.Dark"
            local:title="New recipe"
            local:titleTextColor="@color/main_text"
            local:titleTextAppearance="@style/txtToolbar" />

<!--        <com.google.android.material.appbar.MaterialToolbar-->
<!--            android:id="@+id/toolbar_recipe_create_1_stage"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="?attr/actionBarSize"-->
<!--            android:background="@color/theme_toolbar_color"-->
<!--            android:paddingStart="30dp"-->
<!--            android:theme="@style/ToolbarTheme"-->
<!--            app:buttonGravity="center_vertical"-->
<!--            app:layout_scrollFlags="scroll|enterAlways"-->
<!--            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"-->
<!--            app:title="New recipe"-->
<!--            app:titleTextColor="@color/theme_toolbar_text_color">-->

<!--        </com.google.android.material.appbar.MaterialToolbar>-->
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh_recipe_create_1_stage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nsv_recipe_create_1_stage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:overScrollMode="never">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/container_recipe_create_1_stage"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardview_recipe_create_1_stage"
                    style="@style/myMaterialCardRight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/cards_margin_start"
                    app:cardElevation="6dp"
                    app:cardPreventCornerOverlap="false"
                    app:contentPaddingBottom="10dp"
                    app:contentPaddingLeft="10dp"
                    app:contentPaddingRight="20dp"
                    app:contentPaddingTop="10dp"
                    android:layout_marginBottom="70dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/imageview_photo_recipe_create_1_stage"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_default_recipe_image"
                            app:layout_constraintDimensionRatio="H,1:1"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:shapeAppearance="@style/ShapeAppearanceOverlay.App.CornerSize4Percent" />

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:id="@+id/container_ll"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/imageview_photo_recipe_create_1_stage">

                            <com.google.android.material.floatingactionbutton.FloatingActionButton
                                android:id="@+id/button_edit_photo_recipe_create_1_stage"
                                style="@style/roundBtnEditPhoto"
                                android:layout_width="@dimen/round_btn_edit_userprofile_w_h"
                                android:layout_height="@dimen/round_btn_edit_userprofile_w_h"
                                android:visibility="visible"
                                app:maxImageSize="16dp" />

                            <com.google.android.material.floatingactionbutton.FloatingActionButton
                                android:id="@+id/button_add_photo_recipe_create_1_stage"
                                style="@style/roundBtnAddPhoto"
                                android:layout_width="@dimen/round_btn_edit_userprofile_w_h"
                                android:layout_height="@dimen/round_btn_edit_userprofile_w_h"
                                android:visibility="gone"
                                app:maxImageSize="16dp" />

                            <com.google.android.material.floatingactionbutton.FloatingActionButton
                                android:id="@+id/button_delete_photo_recipe_create_1_stage"
                                style="@style/roundBtnDeletePhoto"
                                android:layout_width="@dimen/round_btn_edit_userprofile_w_h"
                                android:layout_height="@dimen/round_btn_edit_userprofile_w_h"
                                android:layout_marginLeft="15dp"
                                android:visibility="visible"
                                app:maxImageSize="16dp" />
                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <TextView
                            android:id="@+id/textview_title_recipe_create_1_stage"
                            style="@style/recipeCreateTitlesTextStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Title:"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/container_ll" />

                        <EditText
                            android:id="@+id/edittext_title_recipe_create_1_stage"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_marginTop="@dimen/titles_spacing_recipe_create"
                            android:background="@drawable/round_corner_edittext_recipe_create"
                            android:ellipsize="end"
                            android:hint="Recipe title"
                            android:inputType="textCapSentences"
                            android:lines="1"
                            android:maxLength="50"
                            android:paddingHorizontal="10dp"
                            android:layout_marginHorizontal="2dp"
                            android:textAppearance="@style/recipeCreateEditTextStyle"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/textview_title_recipe_create_1_stage" />

                        <TextView
                            android:id="@+id/textview_title_cooking_lvl_recipe_create_1_stage"
                            style="@style/recipeCreateTitlesTextStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/elements_spacing_recipe_create"
                            android:text="Difficulty:"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/edittext_title_recipe_create_1_stage" />

                        <RadioGroup
                            android:id="@+id/togglegroup_recipe_create_1_stage"
                            android:layout_width="match_parent"
                            android:layout_height="33dp"
                            android:layout_marginTop="@dimen/titles_spacing_recipe_create"
                            android:checkedButton="@id/rb_lvl_normal"
                            android:gravity="center_horizontal"
                            android:orientation="horizontal"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/textview_title_cooking_lvl_recipe_create_1_stage">

                            <RadioButton
                                android:id="@+id/rb_lvl_easy"
                                android:layout_width="0dp"
                                android:layout_height="28dp"
                                android:layout_weight="1"
                                android:background="@drawable/radio_selector"
                                android:button="@drawable/null_radio_button"
                                android:elevation="1dp"
                                android:fontFamily="@font/roboto_regular"
                                android:gravity="center"
                                android:text="Easy"
                                android:layout_marginStart="2dp"
                                android:textColor="@drawable/radio_text_selector"
                                android:textSize="15sp"
                                android:translationZ="1dp" />

                            <RadioButton
                                android:id="@+id/rb_lvl_normal"
                                android:layout_width="0dp"
                                android:layout_height="28dp"
                                android:layout_marginHorizontal="10dp"
                                android:layout_weight="1"
                                android:background="@drawable/radio_selector"
                                android:button="@drawable/null_radio_button"
                                android:elevation="1dp"
                                android:fontFamily="@font/roboto_regular"
                                android:gravity="center"
                                android:text="Normal"
                                android:textColor="@drawable/radio_text_selector"
                                android:textSize="15sp"
                                android:translationZ="1dp" />

                            <RadioButton
                                android:id="@+id/rb_lvl_hard"
                                android:layout_width="0dp"
                                android:layout_height="28dp"
                                android:layout_weight="1"
                                android:background="@drawable/radio_selector"
                                android:button="@drawable/null_radio_button"
                                android:elevation="1dp"
                                android:fontFamily="@font/roboto_regular"
                                android:gravity="center"
                                android:text="Hard"
                                android:layout_marginEnd="2dp"
                                android:textColor="@drawable/radio_text_selector"
                                android:textSize="15sp"
                                android:translationZ="1dp" />

                        </RadioGroup>

                        <LinearLayout
                            android:id="@+id/ll_titles_servings_time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:orientation="horizontal"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/togglegroup_recipe_create_1_stage">

                            <TextView
                                android:id="@+id/textview_portion_qtt_cooking_lvl_recipe_create_1_stage"
                                style="@style/recipeCreateTitlesTextStyle"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="15dp"
                                android:layout_weight="1"
                                android:text="Portions:" />

                            <TextView
                                android:id="@+id/textview_time_recipe_create_1_stage"
                                style="@style/recipeCreateTitlesTextStyle"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:layout_weight="1"
                                android:text="Cooking time:" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_et_servings_time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginHorizontal="2dp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/ll_titles_servings_time">

                            <EditText
                                android:id="@+id/edittext_servings_qtt_recipe_create_1_stage"
                                android:layout_width="0dp"
                                android:layout_height="30dp"
                                android:layout_marginTop="@dimen/titles_spacing_recipe_create"
                                android:layout_marginRight="15dp"
                                android:layout_weight="1"
                                android:background="@drawable/round_corner_edittext_recipe_create"
                                android:drawableStart="@drawable/ic_servings_qqt"
                                android:drawableTint="@color/main_text"
                                android:hint="Set portions"
                                android:gravity="center|left"
                                android:drawablePadding="15dp"
                                android:inputType="number"
                                android:lines="1"
                                android:maxLength="6"
                                android:paddingHorizontal="10dp"
                                android:textAppearance="@style/recipeCreateEditTextStyle" />

                            <TextView
                                android:id="@+id/textview_set_time_recipe_create_1_stage"
                                android:layout_width="0dp"
                                android:layout_height="30dp"
                                android:layout_marginLeft="15dp"
                                android:layout_marginTop="@dimen/titles_spacing_recipe_create"
                                android:layout_weight="1"
                                android:background="@drawable/round_corner_edittext_recipe_create"
                                android:drawableStart="@drawable/ic_time_small"
                                android:drawableTint="@color/main_text"
                                android:gravity="center|left"
                                android:drawablePadding="15dp"
                                android:lines="1"
                                android:text="Set time"
                                android:clickable="true"
                                android:paddingHorizontal="10dp"
                                android:textAppearance="@style/recipeCreateEditTextStyle"
                                tools:ignore="UseCompatTextViewDrawableXml" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/textview_title_cooking_method_recipe_create_1_stage"
                            style="@style/recipeCreateTitlesTextStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/elements_spacing_recipe_create"
                            android:text="Cooking method:"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/ll_et_servings_time" />

                        <TextView
                            android:id="@+id/textview_cooking_method_recipe_create_1_stage"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_marginTop="@dimen/titles_spacing_recipe_create"
                            android:background="@drawable/round_corner_edittext_recipe_create"
                            android:drawableStart="@drawable/ic_cooking_method_small"
                            android:drawablePadding="10dp"
                            android:drawableTint="@color/main_text"
                            android:ellipsize="end"
                            android:text="Сhoose method"
                            android:gravity="center|left"
                            android:lines="1"
                            android:elevation="1dp"
                            android:translationZ="1dp"
                            android:paddingHorizontal="10dp"
                            android:textAppearance="@style/recipeCreateEditTextStyle"
                            android:layout_marginHorizontal="2dp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/textview_title_cooking_method_recipe_create_1_stage"
                            tools:ignore="RtlHardcoded,UseCompatTextViewDrawableXml" />

                        <TextView
                            android:id="@+id/textview_title_category_recipe_create_1_stage"
                            style="@style/recipeCreateTitlesTextStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/elements_spacing_recipe_create"
                            android:text="Category:"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/textview_cooking_method_recipe_create_1_stage" />

                        <TextView
                            android:id="@+id/textview_category_recipe_create_1_stage"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_marginTop="@dimen/titles_spacing_recipe_create"
                            android:background="@drawable/round_corner_edittext_recipe_create"
                            android:drawableStart="@drawable/ic_category_small"
                            android:drawablePadding="11dp"
                            android:drawableTint="@color/main_text"
                            android:ellipsize="end"
                            android:text="Сhoose category"
                            android:gravity="center|left"
                            android:lines="1"
                            android:elevation="1dp"
                            android:translationZ="1dp"
                            android:paddingHorizontal="11dp"
                            android:layout_marginHorizontal="2dp"
                            android:textAppearance="@style/recipeCreateEditTextStyle"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/textview_title_category_recipe_create_1_stage" />

                        <ImageView
                            android:id="@+id/imageview_ic_privacy_recipe_create_1_stage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="11dp"
                            android:background="@drawable/ic_privacy_close"
                            android:backgroundTint="@color/main_text"
                            android:scaleType="centerCrop"
                            app:layout_constraintBottom_toBottomOf="@id/textview_title_private_recipe_create_1_stage"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="@id/textview_title_private_recipe_create_1_stage" />

                        <TextView
                            android:id="@+id/textview_title_private_recipe_create_1_stage"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="40dp"
                            android:layout_marginTop="15dp"
                            android:fontFamily="@font/roboto_regular"
                            android:text="Private recipe"
                            android:textColor="@color/main_text"
                            android:textSize="15sp"
                            app:layout_constraintLeft_toRightOf="@id/imageview_ic_privacy_recipe_create_1_stage"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/textview_category_recipe_create_1_stage" />


                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/switch_private_recipe_recipe_create_1_stage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="false"
                            android:theme="@style/MySwitch"
                            app:layout_constraintBottom_toBottomOf="@id/textview_title_private_recipe_create_1_stage"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="@id/textview_title_private_recipe_create_1_stage" />

                        <TextView
                            android:id="@+id/textview_description_private_recipe_create_1_stage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="40dp"
                            android:layout_marginTop="@dimen/titles_spacing_recipe_create"
                            android:fontFamily="@font/roboto_light"
                            android:text="Only you can see the created recipe."
                            android:textColor="@color/blue_grey_200"
                            android:textSize="11sp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/textview_title_private_recipe_create_1_stage" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/button_next_recipe_create_1_stage"
                            style="@style/btnsMain"
                            android:layout_width="@dimen/btn_main_w"
                            android:layout_height="@dimen/btn_main_h"
                            android:layout_marginVertical="@dimen/btn_spacing"
                            android:background="@drawable/selector_btn_main"
                            android:elevation="4dp"
                            android:translationZ="2dp"
                            android:enabled="false"
                            android:text="Next"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/textview_description_private_recipe_create_1_stage"
                            app:layout_constraintBottom_toBottomOf="parent"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>
            </androidx.constraintlayout.widget.ConstraintLayout>



        </androidx.core.widget.NestedScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>