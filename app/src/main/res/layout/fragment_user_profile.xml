<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_blue_grey_50"
    tools:context=".ui.fragment.user_profile.UserProfileFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout_user_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_blue_grey_50"
        tools:ignore="MissingConstraints">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar_user_profile"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/color_blue_grey_200"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:title="Username"
            app:titleTextColor="@color/color_blue_grey_600" >

        </com.google.android.material.appbar.MaterialToolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <ImageView
        android:id="@+id/imageView_user_profile_photo_bgr"
        android:layout_width="match_parent"
        android:layout_height="370dp"
        android:src="@drawable/shrek"
        android:scaleType="centerCrop"
        android:alpha="0.7"
        android:background="@color/color_blue_grey_50"
        app:layout_constraintTop_toBottomOf="@id/appBarLayout_user_profile"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:layout_constraintTop_toTopOf="@id/imageView_profile_photo"
        app:layout_constraintLeft_toLeftOf="@id/imageView_profile_photo"
        app:layout_constraintRight_toRightOf="@id/imageView_profile_photo"
        app:layout_constraintBottom_toBottomOf="@id/imageView_profile_photo"
        android:background="@color/color_blue_grey_200"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize4Percent" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageView_profile_photo"
        android:layout_width="115dp"
        android:layout_height="115dp"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize4Percent"
        android:scaleType="centerCrop"
        android:src="@drawable/shrek"
        app:layout_constraintLeft_toLeftOf="@id/imageView_user_profile_photo_bgr"
        app:layout_constraintRight_toRightOf="@id/imageView_user_profile_photo_bgr"
        app:layout_constraintTop_toTopOf="@id/imageView_user_profile_photo_bgr"
        app:layout_constraintBottom_toTopOf="@id/textView_profile_full_name"/>

    <EditText
        android:id="@+id/textView_profile_full_name"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:fontFamily="@font/roboto_medium"
        android:lines="1"
        android:text="@string/text_fullname_profile"
        android:textAlignment="center"
        android:textColor="@color/color_blue_grey_600"
        android:textSize="12sp"
        android:background="@drawable/round_corner_rect_white"
        android:padding="5dp"
        app:layout_constraintBottom_toTopOf="@id/textView_profile_birthday"
        app:layout_constraintTop_toBottomOf="@id/imageView_profile_photo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:id="@+id/textView_profile_birthday"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:background="@drawable/round_corner_rect_white"
        android:fontFamily="@font/roboto_medium"
        android:lines="1"
        android:padding="5dp"
        android:text="@string/text_birthday"
        android:textAlignment="center"
        android:textColor="@color/color_blue_grey_600"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/textView_profile_bio"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView_profile_full_name" />

    <EditText
        android:id="@+id/textView_profile_bio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_regular"
        android:minLines="1"
        android:maxLines="6"
        android:maxLength="303"
        android:text="@string/text_bio_profile"
        android:textColor="@color/color_blue_grey_600"
        android:textSize="12sp"
        android:background="@drawable/round_corner_rect_white"
        app:layout_constraintTop_toBottomOf="@id/textView_profile_birthday"
        app:layout_constraintLeft_toLeftOf="@id/imageView_user_profile_photo_bgr"
        app:layout_constraintRight_toRightOf="@id/imageView_user_profile_photo_bgr"
        app:layout_constraintBottom_toBottomOf="@id/imageView_user_profile_photo_bgr"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:padding="10dp"/>

    <TextView
        android:id="@+id/textView_profile_recipes_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/title_my_recipes_profile"
        android:textColor="@color/color_blue_grey_200"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/imageView_user_profile_photo_bgr"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="25dp"
        android:layout_marginTop="30dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_user_recipe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/textView_profile_recipes_title"
            android:paddingTop="15dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/rv_profile_my_recipes" />

</androidx.constraintlayout.widget.ConstraintLayout>