    <com.google.android.material.card.MaterialCardView
        android:id="@+id/rv_card_recipe_preview"
        style="@style/myMaterialCardRecipePreview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        app:cardElevation="6dp"
        app:cardPreventCornerOverlap="false"
        app:contentPaddingBottom="10dp"
        app:contentPaddingLeft="10dp"
        app:contentPaddingRight="20dp"
        app:contentPaddingTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imageView_rv_card_recipe_photo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_default_recipe_image"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="H,1:1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize4Percent" />

            <TextView
                android:id="@+id/textView_rv_card_recipe_title"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:elevation="6dp"
                android:ellipsize="end"
                android:fontFamily="@font/roboto_medium"
                android:maxLines="2"
                android:text="@string/title_recipe_preview_rv"
                android:textColor="@color/main_text"
                android:textSize="13sp"
                android:translationZ="4dp"
                app:layout_constraintLeft_toRightOf="@id/imageView_rv_card_recipe_photo"
                app:layout_constraintTop_toTopOf="@id/imageView_rv_card_recipe_photo" />

            <TextView
                android:id="@+id/textView_rv_card_recipe_author_by"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:elevation="6dp"
                android:fontFamily="@font/roboto_light"
                android:lines="1"
                android:text="@string/title_recipe_preview_by_rv"
                android:textColor="@color/main_text"
                android:textSize="11sp"
                android:translationZ="4dp"
                app:layout_constraintBottom_toBottomOf="@id/imageView_rv_card_recipe_photo"
                app:layout_constraintLeft_toLeftOf="@id/textView_rv_card_recipe_title" />

            <TextView
                android:id="@+id/textView_rv_card_recipe_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:elevation="6dp"
                android:fontFamily="@font/roboto_medium"
                android:lines="1"
                android:maxLength="21"
                android:text="@string/title_recipe_preview_author_rv"
                android:textColor="@color/pink_a200"
                android:textSize="11sp"
                android:translationZ="4dp"
                app:layout_constraintLeft_toRightOf="@id/textView_rv_card_recipe_author_by"
                app:layout_constraintTop_toTopOf="@id/textView_rv_card_recipe_author_by" />

            <TextView
                android:id="@+id/rv_ingredients_preview"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:ellipsize="end"
                android:fontFamily="@font/roboto_light"
                android:maxLines="2"
                android:paddingEnd="10dp"
                android:text="Ingredients(12): milk, egg, salt, tomatoes, avocado, lemon, cottage cheese, bread, green, butter, parsley, spinach"
                android:textColor="@color/main_text"
                android:textSize="10sp"
                app:layout_constraintBottom_toTopOf="@id/rv_recipe_adds"
                app:layout_constraintLeft_toLeftOf="@id/textView_rv_card_recipe_title" />

            <LinearLayout
                android:id="@+id/rv_recipe_adds"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/adds_recipe_preview_bgr"
                android:gravity="center"
                android:paddingHorizontal="10dp"
                app:layout_constraintBottom_toTopOf="@id/textView_rv_card_recipe_author_by"
                app:layout_constraintLeft_toLeftOf="@id/textView_rv_card_recipe_author_by">

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@drawable/ic_kcals_preview" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:text="345 kcal"
                    android:textAppearance="@style/txtRecipePreviewAdds"
                    android:textColor="@color/rv_recipe_preview_ic_color" />

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/ic_time_preview" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:text="35 min"
                    android:textAppearance="@style/txtRecipePreviewAdds"
                    android:textColor="@color/rv_recipe_preview_ic_color" />

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/ic_difficulty_preview" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:text="medium"
                    android:textAppearance="@style/txtRecipePreviewAdds"
                    android:textColor="@color/rv_recipe_preview_ic_color" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <ImageView
        android:id="@+id/imageView_rv_card_recipe_favourites"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginEnd="10dp"
        android:elevation="6dp"
        android:src="@drawable/ic_add_to_fav"
        android:tag="tag_favourites_unchecked"
        android:translationZ="4dp"
        app:layout_constraintRight_toRightOf="@id/rv_card_recipe_preview"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView_rv_card_recipe_fork"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:elevation="6dp"
        android:src="@drawable/ic_fork_unchecked"
        android:tag="tag_fork_unchecked"
        android:translationZ="4dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/imageView_rv_card_recipe_favourites"
        app:layout_constraintRight_toRightOf="@id/imageView_rv_card_recipe_favourites" />

    <TextView
        android:id="@+id/textView_rv_card_recipe_forks_avg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:elevation="6dp"
        android:fontFamily="@font/roboto_medium"
        android:lines="1"
        android:text="@string/value_recipe_preview_forks_amount_rv"
        android:textColor="@color/color_blue_grey_200"
        android:textSize="9sp"
        android:translationZ="4dp"
        app:layout_constraintBottom_toBottomOf="@id/imageView_rv_card_recipe_fork"
        app:layout_constraintRight_toLeftOf="@id/imageView_rv_card_recipe_fork" />

</androidx.constraintlayout.widget.ConstraintLayout>