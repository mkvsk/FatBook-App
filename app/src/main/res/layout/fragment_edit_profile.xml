<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_primary_bgr"
    tools:context=".ui.fragment.user.EditUserProfileFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/progressbarLayout_edit_userprofile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="10dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:background="@color/theme_primary_bgr"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ProgressBar
            android:id="@+id/progressbar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout_edit_userprofile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar_edit_userprofile"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/theme_toolbar_color"
            android:theme="@style/ToolbarTheme"
            app:buttonGravity="center_vertical"
            app:layout_scrollFlags="scroll|enterAlways"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:title="edit_profile"
            app:titleTextColor="@color/theme_toolbar_text_color">

        </com.google.android.material.appbar.MaterialToolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_edit_userprofile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardview_edit_userprofile"
            style="@style/myMaterialCardRight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/cards_margin_start"
            app:cardElevation="6dp"
            app:contentPaddingBottom="10dp"
            app:contentPaddingLeft="10dp"
            app:contentPaddingRight="20dp"
            app:contentPaddingTop="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imageview_userphoto_edit_userprofile"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:background="@drawable/ic_default_userphoto"
                    android:scaleType="centerCrop"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:shapeAppearance="@style/ShapeAppearanceOverlay.App.CornerSize50Percent" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="-15dp"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="@id/imageview_userphoto_edit_userprofile"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent">

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/button_edit_photo"
                        style="@style/roundBtnEditPhoto"
                        android:layout_width="@dimen/round_btn_edit_userprofile_w_h"
                        android:layout_height="@dimen/round_btn_edit_userprofile_w_h"
                        android:visibility="visible"
                        app:maxImageSize="16dp" />

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/button_add_photo"
                        style="@style/roundBtnAddPhoto"
                        android:layout_width="@dimen/round_btn_edit_userprofile_w_h"
                        android:layout_height="@dimen/round_btn_edit_userprofile_w_h"
                        android:visibility="gone"
                        app:maxImageSize="16dp" />

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/button_delete_photo"
                        style="@style/roundBtnDeletePhoto"
                        android:layout_width="@dimen/round_btn_edit_userprofile_w_h"
                        android:layout_height="@dimen/round_btn_edit_userprofile_w_h"
                        android:layout_marginLeft="90dp"
                        android:visibility="visible"
                        app:maxImageSize="16dp" />
                </androidx.appcompat.widget.LinearLayoutCompat>


                <ImageView
                    android:id="@+id/imageview_ic_title_edit_userprofile"
                    android:layout_width="@dimen/ic_userprofile_w_h"
                    android:layout_height="@dimen/ic_userprofile_w_h"
                    android:src="@drawable/ic_edit_profile"
                    app:layout_constraintBottom_toBottomOf="@id/edittext_profile_title"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="@id/edittext_profile_title" />

                <EditText
                    android:id="@+id/edittext_profile_title"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/round_corner_edittext_title_website"
                    android:hint="Profile title"
                    android:inputType="textPersonName"
                    android:lines="1"
                    android:maxLength="40"
                    android:paddingHorizontal="10dp"
                    android:textAppearance="@style/editProfileText"
                    app:layout_constraintLeft_toRightOf="@id/imageview_ic_title_edit_userprofile"
                    app:layout_constraintTop_toBottomOf="@id/imageview_userphoto_edit_userprofile" />

                <ImageView
                    android:id="@+id/imageview_ic_website_edit_userprofile"
                    android:layout_width="@dimen/ic_userprofile_w_h"
                    android:layout_height="@dimen/ic_userprofile_w_h"
                    android:src="@drawable/ic_user_website"
                    app:layout_constraintBottom_toBottomOf="@id/edittext_profile_website"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="@id/edittext_profile_website" />

                <EditText
                    android:id="@+id/edittext_profile_website"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/round_corner_edittext_title_website"
                    android:hint="Website"
                    android:inputType="textUri"
                    android:lines="1"
                    android:paddingHorizontal="10dp"
                    android:textAppearance="@style/editProfileText"
                    app:layout_constraintLeft_toRightOf="@id/imageview_ic_website_edit_userprofile"
                    app:layout_constraintTop_toBottomOf="@id/edittext_profile_title" />

                <ImageView
                    android:id="@+id/imageview_ic_bio_edit_userprofile"
                    android:layout_width="@dimen/ic_userprofile_w_h"
                    android:layout_height="@dimen/ic_userprofile_w_h"
                    android:layout_marginTop="6dp"
                    android:src="@drawable/ic_user_bio"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="@id/edittext_profile_bio" />

                <EditText
                    android:id="@+id/edittext_profile_bio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/round_corner_edittext_bio"
                    android:gravity="start"
                    android:hint="Bio"
                    android:maxLength="635"
                    android:maxLines="20"
                    android:minLines="10"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="5dp"
                    android:textAppearance="@style/editProfileText"
                    app:layout_constraintLeft_toRightOf="@id/imageview_ic_website_edit_userprofile"
                    app:layout_constraintTop_toBottomOf="@id/edittext_profile_website" />

                <TextView
                    android:id="@+id/textview_bio_length"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:text="635"
                    android:textColor="@color/blue_grey_200"
                    android:textSize="11sp"
                    app:layout_constraintRight_toRightOf="@id/edittext_profile_bio"
                    app:layout_constraintTop_toBottomOf="@id/edittext_profile_bio" />

                <Button
                    android:id="@+id/button_save_edit_userprofile"
                    style="@style/btnsUserProfile"
                    android:layout_marginTop="20dp"
                    android:text="Save"
                    android:elevation="4dp"
                    android:translationZ="1dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/edittext_profile_bio" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>