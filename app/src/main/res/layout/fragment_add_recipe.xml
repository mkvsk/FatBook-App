<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_blue_grey_50"
    tools:context=".ui.fragment.add_recipe.AddRecipeFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout_add_recipe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_blue_grey_50"
        tools:ignore="MissingConstraints">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar_add_recipe"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/color_blue_grey_200"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:title="New recipe"
            app:titleTextColor="@color/color_blue_grey_600" >

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="70dp"
                android:layout_gravity="end"
                android:rotationY="180"
                android:layout_height="70dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/kuzya_login"/>

        </com.google.android.material.appbar.MaterialToolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <ImageView
        android:id="@+id/imageView_add_recipe_title_bgr"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="360dp"
        android:layout_height="60dp"
        android:layout_marginTop="70dp"
        android:src="@drawable/round_corner_rect_white" />

    <EditText
        android:autofillHints="@null"
        android:id="@+id/editText_add_recipe_title"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:hint="@string/hint_add_recipe_title"
        android:minLines="1"
        android:maxLines="2"
        app:layout_constraintLeft_toLeftOf="@id/imageView_add_recipe_title_bgr"
        app:layout_constraintRight_toRightOf="@id/imageView_add_recipe_title_bgr"
        app:layout_constraintTop_toTopOf="@id/imageView_add_recipe_title_bgr"
        android:textSize="16sp"
        android:fontFamily="@font/roboto_medium"
        android:textColor="@color/color_blue_grey_600"
        android:background="@null"
        android:padding="10dp" />

    <TextView
        android:id="@+id/textView_add_recipe_categories_title"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="@string/title_add_recipe_category"
        app:layout_constraintLeft_toLeftOf="@id/imageView_add_recipe_title_bgr"
        app:layout_constraintTop_toBottomOf="@id/imageView_add_recipe_title_bgr"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/roboto_medium"
        android:textSize="14sp"
        android:textColor="@color/color_blue_grey_200"/>

    <ImageView
        android:id="@+id/imageView_add_recipe_categories_bgr"
        android:layout_width="250dp"
        android:layout_height="84dp"
        android:src="@drawable/round_corner_rect_white"
        app:layout_constraintLeft_toLeftOf="@id/textView_add_recipe_categories_title"
        app:layout_constraintTop_toBottomOf="@id/textView_add_recipe_categories_title"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/editText_add_recipe_categories"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="@string/hint_add_recipe_categories"
        android:lines="4"
        android:textAlignment="gravity"
        android:gravity="left"
        app:layout_constraintLeft_toLeftOf="@id/imageView_add_recipe_categories_bgr"
        app:layout_constraintTop_toTopOf="@id/imageView_add_recipe_categories_bgr"
        app:layout_constraintRight_toRightOf="@id/imageView_add_recipe_categories_bgr"
        android:textSize="12sp"
        android:fontFamily="@font/roboto_regular"
        android:textColor="@color/color_pink_a200"
        android:background="@null"
        android:padding="11dp" />

    <ImageButton
        android:id="@+id/button_add_recipe_photo"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:foreground="@drawable/icon_add_recipe_photo"
        android:background="@drawable/imagebutton_food_photo"
        app:layout_constraintRight_toRightOf="@id/imageView_add_recipe_title_bgr"
        app:layout_constraintTop_toTopOf="@id/imageView_add_recipe_categories_bgr"
        android:elevation="6dp"
        android:translationZ="4dp" />

    <TextView
        android:id="@+id/textView_add_recipe_photo_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/textView_add_recipe_categories_title"
        app:layout_constraintLeft_toLeftOf="@id/button_add_recipe_photo"
        android:text="@string/title_add_recipe_photo"
        android:fontFamily="@font/roboto_medium"
        android:textSize="14sp"
        android:textColor="@color/color_blue_grey_200" />

    <TextView
        android:id="@+id/textView_add_recipe_ingredients_title"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/imageView_add_recipe_categories_bgr"
        app:layout_constraintLeft_toLeftOf="@id/imageView_add_recipe_categories_bgr"
        android:text="@string/title_add_recipe_ingredients"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/roboto_medium"
        android:textSize="14sp"
        android:textColor="@color/color_blue_grey_200" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_add_recipe_ingredients"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        tools:listitem="@layout/rv_add_new_recipe_ingredients"
        app:layout_constraintLeft_toLeftOf="@id/textView_add_recipe_ingredients_title"
        app:layout_constraintRight_toRightOf="@id/button_add_recipe_photo"
        app:layout_constraintTop_toBottomOf="@id/textView_add_recipe_ingredients_title" />

    <ImageButton
        android:id="@+id/imagebutton_rv_add_recipe_ingredient"
        android:layout_width="220dp"
        android:layout_height="35dp"
        app:layout_constraintTop_toBottomOf="@id/rv_add_recipe_ingredients"
        app:layout_constraintLeft_toLeftOf="@id/rv_add_recipe_ingredients"
        android:layout_marginTop="10dp"
        android:elevation="6dp"
        android:translationZ="4dp"
        android:src="@drawable/icon_plus"
        android:background="@drawable/imagebutton_add_ingredient" />


    <TextView
        android:id="@+id/textView_add_recipe_description_title"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/imagebutton_rv_add_recipe_ingredient"
        app:layout_constraintLeft_toLeftOf="@id/imagebutton_rv_add_recipe_ingredient"
        android:text="@string/title_add_recipe_description"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/roboto_medium"
        android:textSize="14sp"
        android:textColor="@color/color_blue_grey_200" />

    <EditText
        android:id="@+id/editText_add_recipe_description"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:minLines="5"
        android:maxLines="30"
        android:lines="5"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:gravity="left"
        app:layout_constraintTop_toBottomOf="@id/textView_add_recipe_description_title"
        app:layout_constraintLeft_toLeftOf="@id/textView_add_recipe_description_title"
        app:layout_constraintRight_toRightOf="@id/textView_add_recipe_description_title"
        android:hint="@string/hint_add_recipe_description"
        android:background="@drawable/round_corner_rect_white"
        android:fontFamily="@font/roboto_light"
        android:textColor="@color/color_blue_grey_600"
        android:textSize="16sp"/>

    <Button
        android:id="@+id/button_add_recipe_save"
        android:layout_width="220dp"
        android:layout_height="35dp"
        android:elevation="6dp"
        android:translationZ="4dp"
        android:background="@drawable/round_corner_rect_pink"
        android:text="@string/text_add_recipe_button_save"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:fontFamily="@font/roboto_regular"
        app:layout_constraintLeft_toLeftOf="@id/editText_add_recipe_description"
        app:layout_constraintRight_toRightOf="@id/editText_add_recipe_description"
        app:layout_constraintTop_toBottomOf="@id/editText_add_recipe_description"
        android:layout_marginTop="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>