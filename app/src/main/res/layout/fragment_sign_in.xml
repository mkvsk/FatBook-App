<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/start_fragments_bgr"
    tools:context=".ui.fragment.signin.SignInFragment">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/fragment_signin_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="70dp">

        <TextView
            android:id="@+id/fragment_signin_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="welcome back"
            style="@style/txtWelcome" />

        <TextView
            android:id="@+id/fragment_signin_appname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FatBook"
            style="@style/txtAppName" />
    </androidx.appcompat.widget.LinearLayoutCompat>


    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/fragment_signin_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingVertical="5dp"
        android:gravity="center_horizontal">

        <EditText
            android:id="@+id/fragment_signin_edittext_username"
            android:hint="username"
            style="@style/editText"
            android:inputType="textPersonName"
            android:background="@drawable/round_corner_edittext_login"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/fragment_signin_edittext_password"
            android:hint="password"
            android:inputType="textPassword"
            style="@style/editText"
            android:background="@drawable/round_corner_edittext_login"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/fragment_signin_button_login"
            style="@style/btnPink"
            android:text="log in" />

    </androidx.appcompat.widget.LinearLayoutCompat>


    <ImageView
        android:id="@+id/test"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:src="@drawable/cat_dialog_signin"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="35dp"
        app:layout_constraintBottom_toTopOf="@id/fragment_signin_app_version"/>

    <TextView
        android:id="@+id/fragment_signin_dialog_text"
        android:layout_width="145dp"
        android:layout_height="90dp"
        android:text="Nice to meet you again!"
        style="@style/txtKuzyaDialog"
        app:layout_constraintRight_toRightOf="@id/test"
        app:layout_constraintTop_toTopOf="@id/test"
        android:layout_marginRight="30dp"
        android:paddingTop="10dp" />

    <TextView
        android:id="@+id/fragment_signin_app_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/txtVersion"
        android:text="â’¸ 2022 PotatoCorp V 2.0.0"
        android:layout_marginBottom="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>