<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_blue_grey_50"
    tools:context=".ui.activity.login.LoginActivity">

    <TextView
        android:id="@+id/textView_login_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_light"
        android:paddingTop="88dp"
        android:text="@string/title_welcome_to"
        android:textColor="@color/color_blue_grey_600"
        android:textSize="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_login_app_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_regular"
        android:paddingBottom="60dp"
        android:text="@string/title_fatbook_introduce"
        android:textColor="@color/color_pink_a200"
        android:textSize="45sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView_login_welcome" />

    <ImageView
        android:id="@+id/imageView_login_catChef"
        android:layout_width="200dp"
        android:layout_height="300dp"
        app:srcCompat="@drawable/kuzya_welcome"
        android:contentDescription="@null"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView_login_app_label"
        android:paddingBottom="20dp" />

    <Button
        android:id="@+id/button_register"
        style="@style/pinkButton"
        android:text="Register"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView_login_catChef" />

    <Button
        android:id="@+id/button_log_in"
        android:text="@string/title_button_login_googleplay"
        style="@style/greyButton"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_register" />

    <TextView
        android:id="@+id/textView_login_tagline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_regular"
        android:text="@string/tagline_fatbook"
        android:textColor="@color/color_blue_grey_200"
        android:layout_marginBottom="23dp"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/textView_login_copyright"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/textView_login_copyright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tag_copyright"
        android:textColor="@color/color_blue_grey_200"
        android:textSize="11sp"
        android:fontFamily="@font/roboto_regular"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingBottom="10dp" />

</androidx.constraintlayout.widget.ConstraintLayout>