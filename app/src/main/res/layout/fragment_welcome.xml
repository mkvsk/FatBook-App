<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/start_fragments_bgr"
    tools:context=".ui.fragment.WelcomeFragment">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/fragment_welcome_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="70dp">

        <TextView
            android:id="@+id/fragment_welcome_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="welcome to"
            style="@style/txtWelcome" />

        <TextView
            android:id="@+id/fragment_welcome_appname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FatBook"
            style="@style/txtAppName" />
    </androidx.appcompat.widget.LinearLayoutCompat>


    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/fragment_welcome_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingVertical="5dp"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/fragment_welcome_button_signup"
            style="@style/btnPink"
            android:text="register" />

        <Button
            android:id="@+id/fragment_welcome_button_signin"
            style="@style/btnPink"
            android:text="sign in" />

    </androidx.appcompat.widget.LinearLayoutCompat>


    <ImageView
        android:id="@+id/test"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:src="@drawable/cat_dialog_welcome"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_welcome_buttons"
        app:layout_constraintBottom_toTopOf="@id/fragment_welcome_app_version"/>

    <TextView
        android:id="@+id/fragment_welcome_dialog_text"
        android:layout_width="145dp"
        android:layout_height="90dp"
        android:text="Get your forks ready"
        style="@style/txtKuzyaDialog"
        app:layout_constraintRight_toRightOf="@id/test"
        app:layout_constraintTop_toTopOf="@id/test"
        android:layout_marginRight="30dp"
        android:paddingTop="10dp" />

    <TextView
        android:id="@+id/fragment_welcome_app_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/txtVersion"
        android:text="PotatoCorpâ’¸ V 2.0.0"
        android:layout_marginBottom="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>