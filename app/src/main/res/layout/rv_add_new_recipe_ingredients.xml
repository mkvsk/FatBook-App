<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="360dp"
    android:layout_height="45dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="10dp">

    <ImageView
        android:id="@+id/imageView_rv_add_new_recipe_ingredient_bgr"
        android:layout_width="220dp"
        android:layout_height="35dp"
        android:background="@drawable/round_corner_rect_white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:layout_width="220dp"
        android:layout_height="35dp"
        app:layout_constraintLeft_toLeftOf="@id/imageView_rv_add_new_recipe_ingredient_bgr"
        app:layout_constraintTop_toTopOf="@id/imageView_rv_add_new_recipe_ingredient_bgr"
        app:layout_constraintBottom_toBottomOf="@id/imageView_rv_add_new_recipe_ingredient_bgr"
        android:paddingLeft="10dp"
        android:hint="@string/hint_rv_add_new_recipe_ingredient"
        android:fontFamily="@font/roboto_regular"
        android:textSize="16sp"
        android:lines="1"
        android:textColor="@color/color_blue_grey_600"
        android:background="@null"/>

    <ImageView
        android:id="@+id/imageView_rv_add_new_recipe_ingredient_quantity_bgr"
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:background="@drawable/round_corner_rect_white"
        app:layout_constraintLeft_toRightOf="@id/imageView_rv_add_new_recipe_ingredient_bgr"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="8dp"/>

    <EditText
        android:id="@+id/editText_rv_add_recipe_ingredient_quantity"
        android:layout_width="90dp"
        android:layout_height="35dp"
        app:layout_constraintLeft_toLeftOf="@id/imageView_rv_add_new_recipe_ingredient_quantity_bgr"
        app:layout_constraintTop_toTopOf="@id/imageView_rv_add_new_recipe_ingredient_quantity_bgr"
        app:layout_constraintBottom_toBottomOf="@id/imageView_rv_add_new_recipe_ingredient_quantity_bgr"
        android:paddingLeft="10dp"
        android:hint="@string/hint_rv_add_new_recipe_ingredient_quantity"
        android:fontFamily="@font/roboto_regular"
        android:textSize="16sp"
        android:lines="1"
        android:textColor="@color/color_blue_grey_600"
        android:background="@null"/>

    <ImageButton
        android:id="@+id/imagebutton_rv_add_recipe_ingredient_quantity"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/icon_minus"
        android:background="@drawable/imagebutton_remove_ingredient"
        android:elevation="6dp"
        android:translationZ="4dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/imageView_rv_add_new_recipe_ingredient_quantity_bgr"
        />

</androidx.constraintlayout.widget.ConstraintLayout>