<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp">

    <TextView
        android:id="@+id/textView_ingredient_in_recipe"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="25dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/round_corner_rect_white"
        android:fontFamily="@font/roboto_regular"
        android:gravity="center_vertical"
        android:hint="@string/hint_rv_add_new_recipe_ingredient"
        android:lines="1"
        android:paddingStart="10dp"
        android:textColor="@color/color_blue_grey_600"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/textView_rv_add_recipe_ingredient_quantity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_rv_add_recipe_ingredient_quantity"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/round_corner_rect_white"
        android:fontFamily="@font/roboto_regular"
        android:gravity="center_vertical"
        android:hint="@string/hint_rv_add_new_recipe_ingredient_quantity"
        android:lines="1"
        android:paddingStart="10dp"
        android:textColor="@color/color_blue_grey_600"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@id/textView_ingredient_in_recipe"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btn_rv_add_recipe_ingredient_remove"
        android:layout_marginTop="5dp"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginEnd="15dp"
        android:background="@null"
        android:elevation="4dp"
        android:src="@drawable/ic_cancel"
        android:scaleType="center"
        android:translationZ="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>