<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_blue_grey_50"
    tools:context=".ui.activity.login.LoginActivity">

    <TextView
        android:id="@+id/textView_skip_add_info_new_cook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_light"
        android:paddingTop="88dp"
        android:text="@string/title_new_cook_in_skip_add"
        android:textColor="@color/color_blue_grey_600"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_skip_add_app_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:text="@string/title_fatbook_skip_add"
        android:textColor="@color/color_pink_a200"
        android:textSize="45sp"
        android:fontFamily="@font/roboto_regular"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView_skip_add_info_new_cook" />

    <TextView
        android:id="@+id/textView_skip_add_cat_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:paddingTop="70dp"
        android:text="@string/text_dialog_skip_add"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:fontFamily="@font/roboto_light"
        app:layout_constraintBottom_toTopOf="@id/imageView_skip_add_cat_dialog"
        app:layout_constraintLeft_toLeftOf="@id/imageView_skip_add_cat_dialog"
        app:layout_constraintRight_toRightOf="@id/imageView_skip_add_cat_dialog"
        app:layout_constraintTop_toTopOf="@id/imageView_skip_add_cat_dialog" />

    <ImageView
        android:id="@+id/imageView_skip_add_cat_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/dialog"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView_skip_add_app_label" />

    <ImageView
        android:id="@+id/ImageView_skip_add_kuzya_talks"
        android:layout_width="180dp"
        android:layout_height="150dp"
        android:src="@drawable/kuzya_new_cook"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView_skip_add_cat_dialog" />

    <Button
        android:id="@+id/button_fill"
        style="@style/pinkButton"
        android:text="@string/text_button_yeah_go_skip_add"
        android:layout_marginTop="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ImageView_skip_add_kuzya_talks" />

    <Button
        android:id="@+id/button_skip"
        style="@style/greyButton"
        android:layout_marginTop="10dp"
        android:text="@string/text_button_no_later_skip_add"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_fill" />

    <TextView
        android:id="@+id/textView_skip_add_copyright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tag_copyright"
        android:textColor="@color/color_blue_grey_200"
        android:textSize="11sp"
        android:fontFamily="@font/roboto_regular"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingBottom="10dp" />

</androidx.constraintlayout.widget.ConstraintLayout>