<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_blue_grey_50"
    tools:context=".ui.activity.SkipAdditionalInfoActivity">

    <TextView
        android:id="@+id/textView_skip_add_info_new_cook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_light"
        android:text="@string/title_new_cook_in_skip_add"
        android:textColor="@color/color_blue_grey_600"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/textView_skip_add_app_label"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:id="@+id/textView_skip_add_app_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="120dp"
        android:fontFamily="@font/roboto_regular"
        android:text="@string/title_fatbook_skip_add"
        android:textColor="@color/color_pink_a200"
        android:textSize="45sp"
        android:layout_marginTop="45dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/textView_skip_add_cat_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:text="@string/cat_dialog_skip_add"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:fontFamily="@font/roboto_regular"
        android:layout_marginBottom="25dp"
        app:layout_constraintBottom_toBottomOf="@id/imageView_skip_add_cat_dialog"
        app:layout_constraintLeft_toLeftOf="@id/imageView_skip_add_cat_dialog"
        app:layout_constraintRight_toRightOf="@id/imageView_skip_add_cat_dialog"
        app:layout_constraintTop_toTopOf="@id/imageView_skip_add_cat_dialog" />

<!--    <ImageView-->
<!--        android:id="@+id/imageView_skip_add_cat_dialog"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:src="@drawable/dialog_round"-->
<!--        android:layout_marginRight="80dp"-->
<!--        app:layout_constraintTop_toTopOf="@id/ImageView_skip_add_kuzya_talks"-->
<!--        app:layout_constraintRight_toRightOf="parent"-->
<!--        app:layout_constraintLeft_toRightOf="@id/ImageView_skip_add_kuzya_talks"/>-->

    <ImageView
        android:id="@+id/imageView_skip_add_cat_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/dialog"
        app:layout_constraintBottom_toTopOf="@id/ImageView_skip_add_kuzya_talks"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <ImageView
        android:id="@+id/ImageView_skip_add_kuzya_talks"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginBottom="130dp"
        android:src="@drawable/kuzya_skip_add_info"
        app:layout_constraintBottom_toTopOf="@+id/button_skip"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/button_fill"
        style="@style/pinkButton"
        android:layout_marginBottom="15dp"
        android:text="@string/btn_yeah_go_skip_add"
        app:layout_constraintBottom_toTopOf="@+id/button_skip"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
         />

    <Button
        android:id="@+id/button_skip"
        style="@style/pinkButton"
        android:text="@string/btn_no_later_skip_add"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toTopOf="@+id/textView_skip_add_tagline"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:id="@+id/textView_skip_add_tagline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/roboto_regular"
        android:text="@string/tagline_fatbook"
        android:textColor="@color/color_blue_grey_200"
        android:textSize="13sp"
        app:layout_constraintBottom_toTopOf="@+id/textView_skip_add_copyright"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/textView_skip_add_copyright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_regular"
        android:text="@string/tag_copyright"
        android:textColor="@color/color_blue_grey_200"
        android:textSize="11sp"
        app:layout_constraintBottom_toTopOf="@id/textView_skip_add_version"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/textView_skip_add_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_regular"
        android:paddingBottom="10dp"
        android:text="@string/tag_version"
        android:textColor="@color/color_blue_grey_200"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>