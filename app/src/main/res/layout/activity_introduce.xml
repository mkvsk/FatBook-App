<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_blue_grey_50">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView_introduce"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView_introduce_app_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:paddingBottom="10dp"
                android:text="@string/title_fatbook_introduce"
                android:textColor="@color/color_pink_a200"
                android:textSize="45sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView_introduce_cat_dialog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="10dp"
                    android:fontFamily="@font/roboto_light"
                    android:paddingTop="70dp"
                    android:text="@string/text_dialog_introduce"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toTopOf="@id/imageView_introduce_cat_dialog"
                    app:layout_constraintLeft_toLeftOf="@id/imageView_introduce_cat_dialog"
                    app:layout_constraintRight_toRightOf="@id/imageView_introduce_cat_dialog"
                    app:layout_constraintTop_toTopOf="@id/imageView_introduce_cat_dialog" />

                <ImageView
                    android:id="@+id/imageView_introduce_cat_dialog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/dialog"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <ImageView
                android:id="@+id/imageView_introduce_kuzya"
                android:layout_width="180dp"
                android:layout_height="150dp"
                android:src="@drawable/kuzya_login"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/imageView_introduce_cat_dialog" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imageView_introduce_icon_accepted"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:elevation="8dp"
                    android:src="@drawable/icon_accepted"
                    android:translationZ="6dp"
                    android:visibility="invisible"
                    app:layout_constraintBottom_toBottomOf="@id/editText_introduce_username"
                    app:layout_constraintRight_toRightOf="@id/editText_introduce_username"
                    app:layout_constraintTop_toTopOf="@id/editText_introduce_username" />

                <EditText
                    android:id="@+id/editText_introduce_username"
                    android:layout_width="234dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="15dp"
                    android:autofillHints="@null"
                    android:background="@drawable/round_corner_edittext"
                    android:fontFamily="@font/roboto_regular"
                    android:hint="@string/hint_username_introduce"
                    android:inputType="text"
                    android:maxLength="16"
                    android:textAlignment="center"
                    android:textColor="@color/color_grey_900"
                    android:textSize="16sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/username_introduce_description_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:paddingTop="10dp"
                android:text="@string/text_requirements_introduce"
                android:textColor="@color/color_blue_grey_200"
                android:textSize="9sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/editText_introduce_username" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imageView_introduce_arrow_next"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_margin="10dp"
                    android:elevation="6dp"
                    android:src="@drawable/arrow_next"
                    android:translationZ="6dp"
                    app:layout_constraintBottom_toBottomOf="@id/button_introduce_next"
                    app:layout_constraintRight_toRightOf="@id/button_introduce_next"
                    app:layout_constraintTop_toTopOf="@+id/button_introduce_next" />

                <Button
                    android:id="@+id/button_introduce_next"
                    android:layout_marginTop="10dp"
                    style="@style/greyButton"
                    android:text="@string/text_button_next_introduce"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>